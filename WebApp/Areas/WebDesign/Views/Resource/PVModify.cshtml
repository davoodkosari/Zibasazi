@using Radyn.FileManager
@using Radyn.Web.Mvc

@model Radyn.WebDesign.DataStructure.Resource

<div class="radynForm">
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.WebDesign.Language
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.DropDownListFor(model => model.LanuageId, (SelectList)ViewBag.LanguageList)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.WebDesign.Type
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.DropDownListFor(model => model.Type, (SelectList)ViewBag.Types)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.WebDesign.Order
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.EditorFor(model => model.Order)
            </div>
        </div>
    </div>
    <div class="fit">
        <div class="table-row-cap">
            <div class="item">
              body
            </div>
        </div>
        <div class="table-row-item ">
            <div class="item">
                @Html.TextAreaFor(model => model.Text)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap table-c-fit">
            <div class="item">
                @Resources.WebDesign.File
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">

                @{
                    Html.RenderAction("FileUploader", "FileUpload", new { area = "FileManager", filePropName = "FileId", fileid = Model.FileId, fileName = "ResourceFile" });
                }

            </div>
        </div>
    </div>
</div>
