@using Radyn.Web.Mvc;
@using Radyn.Web.Mvc.Utility
@using Radyn.WebApp
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.WebDesign.DataStructure.WebSite

@{
    ViewBag.Title = Resources.Common.Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{}
@section PageTitle
{
    @Resources.Common.Detail

}
@section PageAction
{
    <div class="button-div m-btn waves-red i-return">
        @{ Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }

    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>

}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.WebDesign.Title
                </div>
            </div>
            <div class="table-row-item table-fit">
                <div class="item">
                    @Html.DisplayFor(x => x.Title)

                </div>
            </div>
        </div>
        <div>
            <div class="table-row-cap">
                <div class="item">
                    @Resources.WebDesign.InstallPath
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DisplayFor(model => model.InstallPath)
                </div>
            </div>
        </div>
        <div>
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Common.Enable
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @(Model.Enabled ? @Resources.Common.Enable : @Resources.Common.Disable)
                </div>
            </div>
        </div>
        @{
            Html.RadynAction("GetIndex", "WebSiteAlias", new { area = "WebDesign", WebSiteId = Model.Id, status = PageMode.Details });
        }
    </div>
}
