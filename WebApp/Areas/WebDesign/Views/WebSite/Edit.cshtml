@using Radyn.Web.Mvc;
@using Radyn.Web.Mvc.Utility
@using Radyn.WebApp.AppCode
@using Radyn.WebApp.Areas.Common.Component

@model Radyn.WebDesign.DataStructure.WebSite

@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{

}
@section PageTitle
{
    @Resources.Common.Edit

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/edit.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/edit.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("WebSite").Area("WebDesign").Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>

}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="table">
            <div class="fit">
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.WebDesign.Title
                    </div>
                </div>
                <div class="table-row-item table-fit">
                    <div class="item">
                        @{
                            Html.LanguageContentTextBoxFor(Model, x => x.Title);
                        }
                    </div>
                </div>
            </div>

            <div>
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.WebDesign.InstallPath
                    </div>
                </div>
                <div class="table-row-item">
                    <div class="item">
                        @Html.EditorFor(model => model.InstallPath)
                    </div>
                </div>
            </div>
            <div>
                <div class="table-row-cap">
                    <div class="item">
                        @Resources.Common.Enable
                    </div>
                </div>
                <div class="table-row-item drp">
                    <div class="item">
                        @Html.RadioButtonFor(model => model.Enabled, true)@Resources.Common.Enable
                        @Html.RadioButtonFor(model => model.Enabled, false)@Resources.Common.Disable
                    </div>
                </div>
            </div>
            @{
                Html.RadynAction("GetIndex", "WebSiteAlias", new { area = "WebDesign", WebSiteId = Model.Id, status = this.Html.GetPageMode() });
            }
        </div>
    </div>

}
