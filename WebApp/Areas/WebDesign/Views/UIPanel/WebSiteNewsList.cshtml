@using Radyn.News.Tools
@using Radyn.FileManager
@using Radyn.Utility
@using Radyn.WebApp.AppCode.Security
@model List<Radyn.News.DataStructure.News>


    @{
        ViewBag.Title = Resources.Common.NewsList;
        Layout = "~/Views/Shared/WebDesignUser_Layout.cshtml";
    }
    @section Head{
        <script type="text/javascript">
            function NewsClick(id, title) {
                window.location = "@Url.Content("~/WebDesign/UIPanel/WebDesignNewsView?id=")" + id + '/' + title;

            }

        </script>
    }
    <div class="container-hd widget">
        <div class="container-header widget-title">
            <div class="container-header-item">
                <img src="/Areas/Congress/Content/Images/news.png" />
                <span>
                    @Resources.Common.NewsList
                </span>
            </div>
        </div>
        <div class="container-box widget-content ">
            <div class="news-list">
                @foreach (var news in Model)
                {
                    if (!string.IsNullOrEmpty(news.NewsContent.Title1))
                    {
                        <div class="news-list-box ">
                            <a href="@Url.Content("~/WebDesign/UIPanel/WebDesignNewsView?id="+news.Id)">
                                @if (news.ThumbnailId.HasValue)
                                {
                                    Html.RadynFile().Image().ID(news.ThumbnailId.Value).Height(70).Width(100).Style("border: solid 1px grey;").Alt(news.NewsContent.Title1).Render();

                                }
                                else
                                {
                                    <img src="~/Content/Images/tumb.png" alt="@news.NewsContent.Title1">

                                }
                            </a>
                            <div class="news-box-content element-filter">
                                <div class="news-list-title">
                                    <a style="text-decoration: none;" href="@Url.Content("~/WebDesign/UIPanel/WebDesignNewsView?id=" + news.Id)">
                                        @news.NewsContent.Title1.Trancate(72)
                                    </a>
                                </div>
                                <br />
                                <div class="news-list-lead ">
                                    <div class="filter-text">
                                        @news.NewsContent.Lead.Trancate(75)
                                    </div>
                                    <a onclick="window.open('@Url.Content("~/WebDesign/UIPanel/WebDesignNewsView?id=" + news.Id)')">@Resources.Common.MoreInfo </a>
                                    <br />
                                    <span>

                                        @if (news.PublishDate != null && !string.IsNullOrEmpty(news.PublishDate.Trim()))
                                        {

                                            @news.PublishDate.GetCultureDate(SessionParameters.Culture)
                                            <i class="far fa-clock"></i>

                                        }
                                        @*@news.PublishDate*@
                                    </span>
                                </div>
                            </div>


                        </div>
                    }
                }
            </div>
        </div>
    </div>












