@using System.Web
@using System.Web.Mvc.Html
@using Radyn.FileManager
@using Radyn.Utility
@using Radyn.Web.Mvc;

@model System.Collections.Generic.IEnumerable<Radyn.FormGenerator.DataStructure.FormStructure>
    @{
        ViewBag.Title = Resources.FormGenerator.FormList;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{

        <script type="text/javascript">
            function LookUpForm(id) {
                if (id != "") {
                    ShowModal("@Url.Content("~/FormGenerator/UI/LookUpForm?Id=")" + id);
                }

            }

            function GetDesign(Id) {
                if (Id != "") {
                    ShowModal("@Url.Content("~/FormGenerator/DesignForm/LookupFormDesign?formId=")" + Id);
                }
            }

            function LookUpFormdataList(id) {
                if (id != "") {
                    ShowModal("@Url.Content("~/FormGenerator/UI/LookUpFormDataList?formId=")" + id);
                }

            }



        </script>
    }

    @section PageTitle
{
        @Resources.FormGenerator.FormList
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/WebDesign/Forms/Create")).Text(@Resources.FormGenerator.NewForm).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.WebDesignOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/WebDesign/Forms/Create")).Text(@Resources.FormGenerator.NewForm).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.WebDesignOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">

        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                      {
                          columns.Template(formStructure => formStructure.Name).Title("نام").Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(formStructure => formStructure.CreateDate.ShamsiDate()).Title("تاریخ ایجاد").Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(formStructure => formStructure.Enable ? Resources.Common.Enable : Resources.Common.Disable).Title("فعال").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(formstracture => "http://" + HttpContext.Current.Request.Url.Authority + formstracture.Link).Title("مسیر").Width(200).Encode(false).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(formStructure => "  <img alt='" + Resources.Common.View + " " + Resources.FormGenerator.FormData + "' style='cursor: pointer' width = '20px;' height = '20px;' src='/Content/Images/form-view-detail.png'    onclick=\"LookUpFormdataList(" + "'" + formStructure.Id + "'" + ");\" />").Title(Resources.Common.View + " " + Resources.FormGenerator.FormData).Encode(false).HeaderHtmlAttributes(new { style = "text-align:center" }).Width(100);
                          columns.Template(formStructure => "  <img alt='" + Resources.Common.View + "' style='cursor: pointer' width = '20px;' height = '20px;' src='/Content/Images/form-view.png'    onclick=\"LookUpForm(" + "'" + formStructure.Id + "'" + ");\" />").Title(Resources.Common.View + " " + Resources.FormGenerator.Form).HeaderHtmlAttributes(new { style = "text-align:center" }).Encode(false).Width(100);
                          columns.Template(formStructure => "  <img alt='" + Resources.FormGenerator.DesginForm + "' style='cursor: pointer' width = '20px;' height = '20px;' src='/Content/Images/form-design.png'    onclick=\"GetDesign(" + "'" + formStructure.Id + "'" + ");\" />").Title(Resources.FormGenerator.DesginForm).HeaderHtmlAttributes(new { style = "text-align:center" }).Encode(false).Width(100);
                          columns.Template(content =>
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/WebDesign/Forms/Details?Id=" + content.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/WebDesign/Forms/Edit?Id=" + content.Id) + "'> " +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/WebDesign/Forms/Delete?Id=" + content.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ")
                          .Width(100).Encode(false).Filterable(false);

                      })
                                            //
                                            .Sortable(sorting => sorting.Enabled(true))
                                            .Pageable(paging => paging.Enabled(true))
                                            .Filterable(filtering => filtering.Enabled(true))
                                            //            .Footer(true)
                                            .Render();}
        </div>
    </div>
