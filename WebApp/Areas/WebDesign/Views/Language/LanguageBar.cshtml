@using Radyn.Web.Mvc;
@using Radyn.Common.DataStructure
@using Resources
@model IEnumerable<Language>
@if (Model!=null&&Model.Count() > 1)
{
    <table border="0" cellpadding="2" cellspacing="2" dir="@Common.Direction">
        <tr>
            <td style="text-align:@Common.Aligment;">
                @*@Common.Language :*@
            </td>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    
                    <td class="language-btn" style="text-align:@Common.Aligment ;padding: 7px 4px;">
                        @if (item.ShowLogo)
                        { Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Common/Language/SetLanguage?culture=" + item.Id)).ImageUrl(Radyn.FileManager.FileManagerContants.FileHandlerRoot + item.LogoId).Text(item.DisplayName).Style("text-decoration:none;color:white;").Render(); }

                        else
                        { Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Common/Language/SetLanguage?culture=" + item.Id)).ImageWidth("0px").Text(item.DisplayName).Style("text-decoration:none;color:white;").Render(); }
                    </td>
                }
            }

        </tr>
    </table>

}