@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Article
@{
    ViewBag.Title = Resources.Common.Detail;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        $(document).ready(function () {
           $("#divload").show();
            $.get("@Url.Content("~/Congress/ManagmentPanel/GetArticleFlow")", { articelId: '@Model.Id', filterId: '@SessionParameters.CongressUser.Id', isuser:true, id: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#divArticleflow").html(data).hide();
                    $("#divArticleflow").slideDown();

                }
                $("#DiveOpration").show();
                $("#divload").hide();
            });

        });



    </script>
}
@section PageTitle
{
    @Resources.Common.Detail
}
@section PageAction
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@Html.ValidationSummary(true)
@{
    Html.RenderAction("GenerateArticle", "ArticlePanel", new { Id = Model.Id, Status = "UserSent" });
}

<div class="fit" id="divArticleflow">
</div>
