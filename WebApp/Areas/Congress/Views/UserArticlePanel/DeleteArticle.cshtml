@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Article
@{
    ViewBag.Title = @Resources.Common.Delete;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        $(document).ready(function () {

            $.get("@Url.Content("/Congress/ManagmentPanel/GetArticleFlow")", { articelId: '@Model.Id', filterId: '@SessionParameters.CongressUser.Id', isuser: true,date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#divArticleflow").html(data).hide();
                    $("#divArticleflow").slideDown();

                }

            });

        });



    </script>
}
@section PageTitle
{
    @Resources.Common.Delete

}
@section PageAction
{
    <div class="button-div m-btn waves-red i-delete">
        @{ Html.Radyn().ImageActionLink().Text(Resources.Common.Delete).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("15").ImageHeight("20").Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}


    </div>
}
@section PageActionDown
{

}
@Html.ValidationSummary(true)
<div>
    @{
        Html.RenderAction("GenerateArticle", "ArticlePanel", new { Id = Model.Id, Status = "UserSent" });
    }
</div>


<div class="fit" id="divArticleflow">
</div>



