@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Article
@{
    ViewBag.Title = string.Format(Resources.Congress.SendNewArticle,SessionParameters.CurrentCongress.Configuration.ArticleTitle);
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">


        function CreateUserArticle() {
            ShowPostBackLoader();

            $.post("@Url.Content("~/Congress/UserArticlePanel/ValidateArticle")", $('form[action^="@Url.Content("~/Congress/UserArticlePanel/CreateArticle")"]').serialize(), function (data) {
                if (data != "false") {
                    $.post("@Url.Content("~/Congress/UserArticlePanel/CreateArticle")", $('form[action="@Url.Content("~/Congress/UserArticlePanel/CreateArticle")"]').serialize(), function (data2) {
                        if (data2.Result == true) {
                            ShowRadynMessage();
                            var object = '@Url.Content("~")';
                            if (object == "/") window.location = data2.Url;
                            else window.location = '@Url.Content("~")' + data2.Url;
                        } else {
                            HidePostBackLoader();
                        }
                    }).complete(function () {
                        HidePostBackLoader();
                    });
                    ShowRadynMessage();
                } else {

                    HidePostBackLoader();
                }
                ShowRadynMessage();
            });
        }



        $(document).ready(function () {
            ShowPostBackLoader();
            $("#DivArticleItem").html("");
            $.get("@Url.Content("~/Congress/ArticlePanel/GenerateArticle")", { Id: '@Model.Id', Status: "UserModify", date: new Date().getTime() }, function (data) {
                $("#DivArticleItem").html(data).hide();
                $("#DivArticleItem").slideDown();
                HidePostBackLoader();
            });
        });

    </script>

}
@section PageTitle
{
    @string.Format(Resources.Congress.SendNewArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle)

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save" id="BtnSave">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(string.Format(Resources.Congress.SendArticle,SessionParameters.CurrentCongress.Configuration.ArticleTitle)).OtherAttribute(new { onclick = "CreateUserArticle();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@section PageActionDown
{

    <div class="button-div m-btn waves-green i-save" id="BtnSave1">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(string.Format(Resources.Congress.SendArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle)).OtherAttribute(new { onclick = "CreateUserArticle();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}


    </div>
}
@Html.ValidationSummary(true)



<div id="DivArticleItem" class="radynForm users-page full-size detail-edit"></div>

<div>
    @if (ViewBag.AllowPayment)
    {
        Html.RenderAction("GetUserArticlePayment", "UserArticlePanel", new { area = "Congress" });
    }
</div>


