@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Article
@{
    ViewBag.Title = string.Format(Resources.Congress.SendArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle);
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#DivArticleItem").html("");
            $.get("@Url.Content("~/Congress/ArticlePanel/GenerateArticle")", { Id: '@Model.Id', Status: "UserSent", date: new Date().getTime() }, function (data) {
                $("#DivArticleItem").html(data).hide();
                $("#DivArticleItem").slideDown();
            });
        });
    </script>
}
@section PageTitle
{
    @string.Format(Resources.Congress.SendArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle)

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-send">
        @{Html.Radyn().ImageActionLink().Text(string.Format(Resources.Congress.SendArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle)).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/upload-file.png")).ImageWidth("24").ImageHeight("24").ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-send">
        @{Html.Radyn().ImageActionLink().Text(string.Format(Resources.Congress.SendArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle)).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/upload-file.png")).ImageWidth("24").ImageHeight("24").ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }
    </div>
        <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@Html.ValidationSummary(true)

<div id="DivArticleItem"></div>

