@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Article
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">

        function EditUserArticle() {
            ShowPostBackLoader();
           $.post("@Url.Content("~/Congress/UserArticlePanel/ValidateArticle")", $('form[action^="@Url.Content("~/Congress/UserArticlePanel/EditArticle")"]').serialize(), function (data) {
                if (data != "false") {
                    $.post("@Url.Content("~/Congress/UserArticlePanel/EditArticle")", $('form[action^="@Url.Content("~/Congress/UserArticlePanel/EditArticle")"]').serialize(), function (data2) {
                        if (data2 != "false") {
                            ShowRadynMessage();

                        }
                    }).complete(function () {
                        HidePostBackLoader();
                    });;
                    ShowRadynMessage();
                }
                else {
                    HidePostBackLoader();
                }
                ShowRadynMessage();
            });
        }



        function GetAticleFlow() {
            ShowPostBackLoader();
            $.get("@Url.Content("~/Congress/ManagmentPanel/GetArticleFlow")", { articelId: '@Model.Id', filterId: '@SessionParameters.CongressUser.Id', isuser: true, date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#divArticleflow").html(data).hide();
                    $("#divArticleflow").slideDown();
                  
                }
                HidePostBackLoader();
            });

        }
        
        $(document).ready(function () {
            $("#DivArticleItem").html("");
            ShowPostBackLoader();
             $.get("@Url.Content("~/Congress/ArticlePanel/GenerateArticle")", { Id: '@Model.Id', Status: "UserModify", date: new Date().getTime() }, function (data) {
                $("#DivArticleItem").html(data).hide();
                $("#DivArticleItem").slideDown();
                 HidePostBackLoader();
            });
            GetAticleFlow();

        });
    </script>
}
@section PageTitle
{
    @Resources.Common.Edit
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save" id="BtnSave">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "EditUserArticle();" }).Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save" id="BtnSave1">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "EditUserArticle();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserArticlePanel/IndexArticle")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}

<div id="DivArticleItem" class="widget"></div>

<div class="fit" id="divArticleflow">
</div>


