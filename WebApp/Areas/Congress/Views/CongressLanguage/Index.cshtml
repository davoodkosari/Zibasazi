@using Radyn.FileManager
@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Common.DataStructure.Language>
    @{
        ViewBag.Title = Resources.Congress.CongressLanuageList;
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    @section Head{
    }
    @section PageTitle
{
        @Resources.Congress.CongressLanuageList
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressLanguage/Create")).Text(Resources.Congress.NewCongressLanuage).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressLanguage/Create")).Text(Resources.Congress.NewCongressLanuage).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
            </ul>
        </div>
        <div class="fit mini-icon">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                  {
                      columns.Template(language => "<img alt='" + language.DisplayName + "' src='" + Radyn.FileManager.FileManagerContants.FileHandlerRoot + " " + language.LogoId + "' height='50' width='80' />").Title(@Resources.CommonComponent.LanguageLogoId).Width(40).Encode(false);
                      columns.Template(language => language.Id).Title(@Resources.CommonComponent.LanguageId).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(language => language.DisplayName).Title(@Resources.CommonComponent.LanguageDisplayName).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(language => language.Enabled ? @Resources.CommonComponent.LanguageEnabled : @Resources.CommonComponent.LanguageDiabled).Title(@Resources.CommonComponent.LanguageStatus).Width(100);
                      columns.Template(language => language.ShowLogo ? @Resources.Common.Yes : @Resources.Common.No).Title(@Resources.CommonComponent.ShowLogoLanuage).Width(100);
                      columns.Template(language => language.IsDefault ? @Resources.Common.Yes : @Resources.Common.No).Title(@Resources.Common.IsDefult).Width(100);
                      columns.Template(language =>
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/CongressLanguage/Details?Id=" + language.Id) + "'>" +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/CongressLanguage/Edit?Id=" + language.Id) + "'> " +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/CongressLanguage/Delete?Id=" + language.Id) + "'>" +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Encode(false).Width(150).Encode(false).Filterable(false);

                  })
//
.Sortable(sorting => sorting.Enabled(true))
.Pageable(paging => paging.Enabled(true))
.Filterable(filtering => filtering.Enabled(true))
//.Footer(true)
.Render();}
        </div>
    </div>
