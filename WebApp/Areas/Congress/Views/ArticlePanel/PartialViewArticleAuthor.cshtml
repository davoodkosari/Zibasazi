
@using Radyn.Utility
@using Radyn.Web.Mvc
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.ArticleAuthors
<script type="text/javascript">
    function SaveData() {
        $.post("@Url.Content("~/Congress/ArticlePanel/GetAuthor")", $('form[action^="@Url.Content("~/Congress/ArticlePanel/GetAuthor")"]').serialize(), function (data) {
            if (data != 'false') {
                Close_thisModal();
                AuthorList();

            }
            ShowRadynMessage();
        });
    }
</script>
@using (Html.BeginForm())
{
<div class="radynForm">
    <div class="item-row ">
        <div class="table-row-cap">
            <div class="item">
                <span style="color: red">*</span>    @Resources.Congress.Name
            </div>
        </div>
        <div class="table-row-item ">
            <div class="item">
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
    </div>
    @if (SessionParameters.CurrentCongress.Configuration.EnableArticlePercentage)
    {
        <div class="item-row ">
            <div class="table-row-cap">
                <div class="item">
                    <span style="color: red">*</span>    @Resources.Congress.PercentageOfParticipation
                </div>
            </div>
            <div class="table-row-item ">
                <div class="item">
                    @Html.EditorFor(model => model.Percentage)
                </div>
            </div>
        </div>
    }

    <div class="item-row ">
        <div class="table-row-cap">
            <div class="item">
                <span style="color: red">*</span>       @Resources.Congress.IsDirector
            </div>
        </div>
        <div class="table-row-item drp">
            <div class="item">
                @Html.RadioButtonFor(model => model.IsDirector, true)@Resources.Common.Yes
                @Html.RadioButtonFor(model => model.IsDirector, false)@Resources.Common.No
            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Affiliation
            </div>
        </div>
        <div class="table-row-item table-fit">
            <div class="item">
                @Html.EditorFor(model => model.Address)

            </div>
        </div>
        <div class="table-row-success button-group-item">
            <div class="button-div m-btn waves-green i-save">
                @{Html.Radyn().ImageActionLink().Text(Resources.Common.Save).Align(Resources.Design.Align.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(Resources.Design.Align.ToEnum<ImageActionLink.Position>()).OtherAttribute(new { onclick = "SaveData();" }).Render(); }
            </div>
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().Text(Resources.Common.Cancel).Align(Resources.Design.Align.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(Resources.Design.Align.ToEnum<ImageActionLink.Position>()).OtherAttribute(new { onclick = "Close_thisModal();" }).Render(); }
                <i class="fas fa-undo"></i>
            </div>
        </div>
    </div>
    <input type="hidden" value="@Model.Id" name="ArticleAuthorId" id="ArticleAuthorId" />
</div>
}