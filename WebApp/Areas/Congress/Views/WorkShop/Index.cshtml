@using Radyn.Common.Definition
@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Congress.DataStructure.WorkShop>
    @{
        ViewBag.Title = Resources.Congress.WorkShopList;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{
        <script type="text/javascript">
            function PrintList() {
                ShowPostBackLoader();

                $.get("/Congress/ReportPanel/PrintWorkShopList", { date: new Date().getTime() }, function (data) {
                    if (data != "false") {
                        window.open('@Url.Content("~/ReportBuilder/ReportView")');

                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });

            }

        </script>
    }

    @section PageTitle
{
        @Resources.Congress.WorkShopList

    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/WorkShop/Create")).Text(Resources.Congress.WorkShopNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }

        </div>
        <div class="button-div m-btn waves-blue i-print"  id="DivPrint">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Congress.WorkShopList).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/WorkShop/Create")).Text(Resources.Congress.WorkShopNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-blue i-print"  id="DivPrint1">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Congress.WorkShopList).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }

    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
                <li>
                    <img src="/Content/Images/reserve-list.png">
                    @Resources.Congress.RezervList
                </li>
            </ul>
        </div>
        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                {
                    columns.Template(workShop => workShop.Subject).Title(Resources.Congress.Subject).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(workShop => string.Format("{0:n0}", workShop.ValidCost.ToDecimal()) + " " + workShop.CurrencyType.ToEnum<Enums.CurrencyType>().GetDescriptionInLocalization()).Title(Resources.Congress.Cost).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(workShop => workShop.Capacity).Title(Resources.Congress.Capacity).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(workShop => workShop.RezervCount).Title(Resources.Congress.RerzervCount).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(workShop =>
                        "<a style='cursor: pointer;'  href='" + Url.Content("/Congress/WorkShop/Details?Id=" + workShop.Id) + "'>" +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("/Congress/WorkShop/Delete?Id=" + workShop.Id) + "'>" +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("/Congress/WorkShop/Edit?Id=" + workShop.Id) + "'> " +
                        " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='/Content/Images/edit.png' />" + "</a> | " +
                        "<a style='cursor: pointer;'  href='" + Url.Content("/Congress/ManagmentPanel/UserRequestWorkShops?Id=" + workShop.Id) + "'> " +
                        " <img width='18' align='absmiddle' title='" + Resources.Congress.RezervList + "' src='" + Url.Content("~/Content/Images/reserve-list.png") + "' />" + "</a> ").Width(300).Encode(false).Filterable(false);
                })
                  //
                  .Sortable(sorting => sorting.Enabled(true))
                  .Pageable(paging => paging.Enabled(true))
                  .Filterable(filtering => filtering.Enabled(true))
                  //              .Footer(true)
                  .Render();}


        </div>

    </div>
