@using Radyn.FileManager
@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Base
@using Radyn.WebApp.Areas.Common.Component

@model Radyn.Congress.DataStructure.WorkShop
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function changeCulture() {
            var langId = document.getElementById("LanguageId").value;
            $("#DivItem").html("");
            $.get("@Url.Content("~/Congress/WorkShop/GetModify")", { Id: '@ViewBag.Id', culture: langId, date: new Date().getTime() }, function (data) {
                $("#DivItem").html(data).slideDown("slow");;
            });
        }

        $(document).ready(function () {
            changeCulture();

        });
    </script>
}
@section PageTitle
{
    @Resources.Common.Edit

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.Save + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.SaveAndNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }
        @*.OtherAttribute(new { style = "width: 10px!important;height: 13px!important;" })*@
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.SaveAndNewLanguage).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNewLanguage + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/WorkShop/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.Save + "');").OtherAttribute(new { style = "width: 10px;height: 14px;" }).Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.SaveAndNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.SaveAndNewLanguage).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction("function(data){if(data.Result!=false){window.location=data.Url} ShowRadynMessage();}").NavigateUrl(Url.Content("~/Congress/WorkShop/Edit")).Serialize(Url.Content("~/Congress/WorkShop/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNewLanguage + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/WorkShop/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@Html.ValidationSummary(true)
<div class="radynForm">
    <div class="fit">
        @{
            Html.LanguageDropDownList("changeCulture();");
        }
    </div>
    <div id="DivItem"></div>
</div>