@using Radyn.Reservation.Definition
@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Reservation.DataStructure.Hall>
    @{
        ViewBag.Title = Resources.Reservation.HallList;
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    @section Head{
        <script type="text/javascript">
            function GetDesign(Id) {
                ShowModal("/Reservation/HallChairDesign/LookUpDesign?hallId=" + Id);
            }
            function GetView(Id) {
                ShowModal("/Reservation/HallChairDesign/LookUpView?hallId=" + Id);
            }

        </script>
    }
    @section PageTitle
{
        @Resources.Reservation.HallList
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressHall/Create")).Text(Resources.Reservation.NewHall).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        @if (!string.IsNullOrEmpty(Request.QueryString["ParentId"]))
        {
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressHall/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
            </div>

        }
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>

    }
    @section PageActionDown
{
            <div class="button-div m-btn waves-blue i-add">
                @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressHall/Create")).Text(Resources.Reservation.NewHall).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }

            </div>
        @if (!string.IsNullOrEmpty(Request.QueryString["ParentId"]))
        {
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressHall/Index")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
            </div>
        }
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
                <li>
                    <img src="/Content/Images/form-view.png">
                    @Resources.Common.View
                </li>
                <li>
                    <img src="/Content/Images/form-design.png">
                    @Resources.Congress.Design
                </li>
                <li>
                    <img src="/Areas/Reservation/Content/Images/Appartment.png">
                    @Resources.Reservation.Parent
                </li>
            </ul>
        </div>
        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                {
                    columns.Template(hall => hall.Name).Title(Resources.Reservation.Name).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(hall => hall.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(Resources.Common.Enable).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(hall => hall.Length).Title(Resources.Reservation.Length).Width(50).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(hall => hall.Width).Title(Resources.Reservation.Width).Width(50).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(hall => hall.ParentId.HasValue ? hall.ParentHall.Name : "").Title(Resources.Reservation.Parent).Width(150).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(hall => "  <img alt='" + Resources.Common.View + "' style='cursor: pointer' width = '20px;' height = '20px;' src='/Content/Images/form-view.png'    onclick=\"GetView(" + "'" + hall.Id + "'" + ");\" />").Title(Resources.Common.View).HeaderHtmlAttributes(new { style = "text-align:center" }).Encode(false).Width(50);
                    columns.Template(hall => "  <img alt='" + @Resources.Reservation.Design + "' style='cursor: pointer' width = '20px;' height = '20px;' src='/Content/Images/form-design.png'    onclick=\"GetDesign(" + "'" + hall.Id + "'" + ");\" />").Title(Resources.Reservation.Design).HeaderHtmlAttributes(new { style = "text-align:center" }).Encode(false).Width(50);
                    columns.Template(hall => (hall.HaveChild(false) ? "<a style='cursor: pointer;'  href=" + Url.Content("~/Congress/CongressHall/Index") + "?parentId=" + hall.Id + "  > <img width='20' height = '20px;' align='absmiddle' title='" + Resources.Reservation.Parent + "'  src='" + Url.Content("/Areas/Reservation/Content/Images/Appartment.png") + "' /></a> | " : "") + "<a style='cursor: pointer;'  href=" + Url.Content("~/Congress/CongressHall/Details") + "?Id=" + hall.Id + "  > <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "'  src='" + Url.Content("~/Content/Images/details.png") + "' /></a> | <a style='cursor: pointer;'  href=" + Url.Content("~/Congress/CongressHall/Edit") + "?Id=" + hall.Id + " >  <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "'   src='" + Url.Content("~/Content/Images/edit.png") + "' /></a> | <a style='cursor: pointer;'  href=" + Url.Content("~/Congress/CongressHall/Delete") + "?Id=" + hall.Id + " > <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "'   src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' /></a>").Width(300).Encode(false).Filterable(false);
                })
                                            //                    
                                            .Sortable(sorting => sorting.Enabled(true))
                                            .Pageable(paging => paging.Enabled(true))
                                            .Filterable(filtering => filtering.Enabled(true))
                                            //                    .Footer(true)
                                            .Render();}
        </div>
    </div>

