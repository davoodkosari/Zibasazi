@using Radyn.FileManager
@using Radyn.Utility
@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Common.Component
@model Radyn.Congress.DataStructure.Supporter
@if (Model != null)
{
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Title
            </div>
        </div>
        <div class="table-row-item table-c-fit table-fit">
            <div class="item">
                @Html.DisplayFor(x => x.Title)

            </div>
        </div>
    </div>
   
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.SupportType
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">
                @Html.DisplayFor(model => model.SupportTypeId, (SelectList)ViewBag.SupportType)
            </div>
        </div>
    </div>


    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.EnterPriseNode.WebSite
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">
                @Html.DisplayFor(model => model.WebSite)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Sort
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">
                @Html.DisplayFor(model => model.Sort)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Logo
            </div>
        </div>
        <div class="table-row-item table-c-fit">
            <div class="item">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    Html.RadynFile().Image().ID(Model.Image.ToGuid()).DeleteButtonVisible("Image").Render();
                }
            </div>
        </div>
    </div>

}