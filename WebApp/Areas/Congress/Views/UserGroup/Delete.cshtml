@using Radyn.Web.Mvc;
@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = @Resources.Common.Delete;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function DeleteUser() {
            $.get("@Url.Content("~/Congress/UserGroup/DeleteUser")", { Id: '@ViewBag.Id', date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    ShowRadynMessage();
                    window.location = '@Url.Content("~/Congress/UserGroup/Index")';
                }
            });
            ShowRadynMessage();
        }
    </script>
}


@section PageAction
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Delete).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").OtherAttribute(new { onclick = "DeleteUser()" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-delete">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Delete).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").OtherAttribute(new { onclick = "DeleteUser()" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }
    </div>
}
<div class="radynForm">
    @{
        Html.RenderAction("GetDetails", "User", new { area = "Congress", Id = ViewBag.Id });
    }
</div>