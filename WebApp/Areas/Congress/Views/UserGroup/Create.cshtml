@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Base
@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = @Resources.Congress.NewUser;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function CreateUser() {
            $.post("@Url.Content("~/Congress/UserGroup/Create")", $('form[action^="@Url.Content("~/Congress/UserGroup/Create")"]').serialize(), function (data) {
                if (data.Result != false) {
                    ShowRadynMessage();
                    window.location = data.Url;
                }
            });
            ShowRadynMessage();
        }
        $(document).ready(function () {
            $("#DivItemCreate").html("");
            $.get("@Url.Content("~/Congress/User/GetModify")", { date: new Date().getTime() }, function (data) {
                $("#DivItemCreate").html(data).hide();
                $("#DivItemCreate").slideDown();
            });

        });

    </script>

}

@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Create")).Render(); }

    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.SaveAndNew).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Create")).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }



    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Create")).Render(); }

    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.SaveAndNew).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Create")).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }



    </div>
}
@Html.ValidationSummary(true)
@using (Html.BeginForm())
{
    <div class="radynForm" id="DivItemCreate"></div>
}

