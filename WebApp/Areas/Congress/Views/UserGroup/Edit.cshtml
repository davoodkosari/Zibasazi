@using Radyn.FileManager
@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Base
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools

@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function EditUser() {
            $.post("@Url.Content("~/Congress/UserGroup/Edit")", $('form[action^="@Url.Content("~/Congress/UserGroup/Edit")"]').serialize(), function (data) {
                if (data.Result != false) {
                    ShowRadynMessage();
                    window.location = data.Url;
                }
            });
            ShowRadynMessage();

        }
        $(document).ready(function () {
            $("#DivItem").html("");
            $.get("@Url.Content("~/Congress/User/GetModify")", { Id: '@ViewBag.Id', date: new Date().getTime() }, function (data) {
                $("#DivItem").html(data).hide();
                $("#DivItem").slideDown();
            });

        });

    </script>
}

@section PageAction
{
    <div class="button-div m-btn waves-green i-save ">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").ImageHeight("20").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Edit"), false).Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.SaveAndNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").ImageHeight("20").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }


    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").ImageHeight("20").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Edit"), false).Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.SaveAndNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").ImageHeight("20").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/UserGroup/Edit"), false).PreCallbackFunction("FormCallBackAction('" + FormSubmitAction.SaveAndNew + "');").Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).NavigateUrl(Url.Content("~/Congress/UserGroup/Index")).Render(); }


    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm" id="DivItem"></div>
}





