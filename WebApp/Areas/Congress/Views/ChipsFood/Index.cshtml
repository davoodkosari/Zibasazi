@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Congress.DataStructure.ChipsFood>
    @{
        ViewBag.Title = Resources.Congress.ChipsFoodList;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle {@Resources.Congress.ChipsFoodList }
    @section PageAction {
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/ChipsFood/Create")).Text(Resources.Congress.ChipsFoodNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown {
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/ChipsFood/Create")).Text(Resources.Congress.ChipsFoodNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageWidth("15").Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
                <li>
                    <img src="/Areas/Congress/Content/Images/restaurant.png" style="width: 16px; height: 16px;">
                    @Resources.Congress.ChipsFoodList
                </li>
            </ul>
        </div>
        <div class="fit">
            @{
                Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                {
                    columns.Template(chipsFood => chipsFood.Name).Title(Resources.Congress.Name).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(chipsFood => chipsFood.Capacity).Title(Resources.Congress.Capacity).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(chipsFood => chipsFood.BaseCapacity).Title(Resources.Congress.BaseCapacity).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                    columns.Template(chipsFood => "<a style='cursor: pointer;'  href=" + Url.Content("~/Congress/chipsFood/Details") + "?Id=" + chipsFood.Id + "  > <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "'  src='" + Url.Content("~/Content/Images/details.png") + "' /></a> | " +
                                                  "<a style='cursor: pointer;'  href=" + Url.Content("~/Congress/chipsFood/Edit") + "?Id=" + chipsFood.Id + " >  <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "'   src='" + Url.Content("~/Content/Images/edit.png") + "' /></a> |" +
                                                  " <a style='cursor: pointer;'  href=" + Url.Content("~/Congress/chipsFood/Delete") + "?Id=" + chipsFood.Id + " > <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "'   src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' /></a> | " +
                                                   "<a style='cursor: pointer;'  href=" + Url.Content("~/Congress/ChipsFood/JoinUser") + "?Id=" + chipsFood.Id + " >  <img width='16' align='absmiddle' height='auto' title='" + Resources.Congress.ChipsFoodJoinUser + "'   src='" + Url.Content("/Areas/Congress/Content/Images/restaurant.png") + "' /></a> ").Width(300).Encode(false).Filterable(false);
                })
                    //
                    .Sortable(sorting => sorting.Enabled(true))
                    .Pageable(paging => paging.Enabled(true))
                    .Filterable(filtering => filtering.Enabled(true))
                    //                .Footer(true)
                    .Render();
            }
        </div>
    </div>
