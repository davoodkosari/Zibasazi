@using Radyn.Utility
@using Radyn.Web.Mvc
@model Radyn.Congress.DataStructure.Resource
@{
    ViewBag.Title = Resources.Common.Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{

}
@section PageTitle
{
    @Resources.Common.Detail
}
@section PageAction
{

<div class="button-div m-btn waves-red i-return">
    @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Resource").Area("Congress").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
</div>
}
@section PageActionDown
{
<div class="button-div m-btn waves-red i-return">
    @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("Resource").Area("Congress").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
</div>
}
<div class="radynForm">
    @using (Html.BeginForm())
    {
        Html.RenderAction("GetDetails", "Resource", new { Id = ViewBag.Id, area = "Congress" });

    }

</div>