@using Radyn.Utility
@using Radyn.Web.Mvc
@using Radyn.Congress.Tools

@model IEnumerable<Radyn.Congress.DataStructure.Resource>
    @{
        ViewBag.Title = Resources.Congress.ResourceList;

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Congress.ResourceList
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Resource").Area("Congress").Text(Resources.Congress.NewResource).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Resource").Area("Congress").Text(Resources.Congress.NewResource).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }

        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @using (Html.BeginForm())
    {
        <div class="radynForm">
            <div class="fit">
                @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                      {

                          columns.Template(slide => slide.Title).Title(Resources.Congress.Title).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(homa => homa.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(@Resources.Common.Enable).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(slide => ((Enums.ResourceType)slide.Type).GetDescriptionInLocalization()).Title(Resources.Congress.Type).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(resource =>
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Resource/Details?Id=" + resource.Id) + "'>" +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Resource/Edit?Id=" + resource.Id) + "'> " +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Resource/Delete?Id=" + resource.Id) + "'>" +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Width(300).Encode(false).Filterable(false);

                      })

        .Sortable(sorting => sorting.Enabled(true))
        .Pageable(paging => paging.Enabled(true))
        .Filterable(filtering => filtering.Enabled(true))
        //.Footer(true)
        .Render();}

            </div>
        </div>

    }

