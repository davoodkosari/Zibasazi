@using System
@using Radyn.Web.Mvc
@using Radyn.Web.Mvc.Utility
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.Homa
<script src="/App_Themes/RadynBase/Scripts/jquery-1.12.4.min.js" type="text/javascript"></script>
@{

    Html.HtmlEncoder((string)ViewBag.Html);
}
<script type="text/javascript">
    $(document).ready(function () {

        SetBachgroundColor();
    });
    function SetBachgroundColor() {
        $(document).ready(function () {
            var a = '@(Model != null && Model.Configuration.BackgroundIsImage)';
            var b = '@(Model != null && Model.Configuration.BackgroundIsImage && Model.Configuration.BackgroundImage != null)';
            var c = '@(Model != null && !Model.Configuration.BackgroundIsImage && !string.IsNullOrEmpty(Model.Configuration.BackgroundColor))';
            if (a == "True" && b == "True") {
                document.getElementsByTagName("body")[0].style.background = 'url("@(Radyn.FileManager.FileManagerContants.FileHandlerRoot + (Model != null ? Model.Configuration.BackgroundImage : Guid.Empty))")';

            }
            if (a == "False" && c == "True") {
                document.getElementsByTagName("body")[0].style.backgroundColor = "#" + '@(Model != null ? Model.Configuration.BackgroundColor : "none")';
            }
        });
    }
</script>
