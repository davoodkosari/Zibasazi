@using Radyn.Web.Mvc
@{
    ViewBag.Title = Resources.Congress.Referee;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";

}
@section Head{

    <script type="text/javascript">

        function SearchReferee() {
            ShowPostBackLoader();
            $("#DivReferees").html("");
            var value = $("#txtSearch").val();
            $.get("@Url.Content("~/Congress/Pivot/SearchRefereepivot")", { txt: value, pivotId: '@ViewBag.pivot', date: new Date().getTime() }, function(data) {
                if (data != "false") {
                    $("#DivReferees").html(data).slideDown("slow");;

                }
                ShowRadynMessage();
            }).complete(function() {
                HidePostBackLoader();
            });
        }

        $(document).ready(function() {
           
            GetAssignedToReferee();


        });

        function Selectandclose() {
            $.post("@Url.Content("~/Congress/Pivot/LookUPRefereePivot")", $('form[action^="@Url.Content("~/Congress/Pivot/LookUPRefereePivot")"]').serialize(), function(data) {
                if (data != "false") {
                    ShowRadynMessage();
                    GetAssignedToReferee();
                }
                ShowRadynMessage();
            });

        }

        function GetAssignedToReferee() {
            ShowPostBackLoader();
            $("#DivReferees").html("");
            $.get("@Url.Content("~/Congress/Pivot/GetReferess")", { pivotId: '@ViewBag.pivot', date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#DivReferees").html(data).slideDown("slow");;

                }
            }).complete(function () {
                HidePostBackLoader();

            });

        }
    </script>
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImageHeight("25").ImageWidth("25").ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "Selectandclose();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Save).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImageHeight("25").ImageWidth("25").ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "Selectandclose();" }).Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>

}

@using (Html.BeginForm())
{
    <input type="hidden" value="@ViewBag.pivot" id="pivotId" name="pivotId"/>
    <div class="fit">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Referee
            </div>
        </div>
        <div class="table-row-item table-fit ">
            <div class="item">
                <div class="width50percent page-align">
                    @Html.TextBox("txtSearch")
                </div>

            </div>
            <div class="width13percent page-align" id="BtnSearch">
                @{Html.Radyn().ImageActionLink().Text(Resources.Common.Search).Align(ImageActionLink.Alignment.Right).ImageUrl(Url.Content("~/Content/Images/search_button.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "SearchReferee();" }).Render(); }
            </div>
        </div>

    </div>
   
    <div id="DivReferees"></div>
}
