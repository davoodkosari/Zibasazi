@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@{
    if (ViewBag.State == "Details")
    {
        ViewBag.Title = @Resources.Common.View + " " + string.Format(Resources.Congress.CongressArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle);
    }
    else
    {
        ViewBag.Title = @Resources.Common.Edit + " " + string.Format(Resources.Congress.CongressArticle, SessionParameters.CurrentCongress.Configuration.ArticleTitle);
    }

    Layout = "~/Views/Shared/LookUpLayout.cshtml";

}
@section Head{
    <script type="text/javascript">
        function PostData() {
            RadynPostForm("@Url.Content("~/Congress/ManagmentPanel/ModifyArticle")", "@Url.Content("~/Congress/ManagmentPanel/ModifyArticle")", function (data2) {
                if (data2 != "false") {
                    Close_thisModal();
                    SearchAricle();
                }
                
            });
            

        }


        $(document).ready(function () {
            $("#content-section").html("");
            $.get("/Congress/ArticlePanel/GenerateArticle", { Id: "@ViewBag.Id", Status: "@ViewBag.State", date: new Date().getTime() }, function (data) {
                $("#content-section").html(data).slideDown("slow");;
            });


        });
    </script>
}

@section PageAction
{
    @if (ViewBag.State == "AdminModify")
    {
        <div class="button-div m-btn waves-green i-save" id="divSave1">
            @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "PostData();" }).Render(); }
        </div>
    }

        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
        </div>
}
@section PageActionDown
{
    @if (ViewBag.State == "AdminModify")
    {
        <div class="button-div m-btn waves-green i-save" id="divSave2">
            @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "PostData();" }).Render(); }
        </div>
    }
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }

        </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">


        <div id="content-section">
        </div>


    </div>
}
