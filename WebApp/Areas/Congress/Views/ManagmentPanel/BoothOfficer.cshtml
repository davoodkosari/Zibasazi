@using Radyn.Web.Mvc
@model IEnumerable<Radyn.Congress.DataStructure.UserBooth>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.Congress.BoothRezerv;
        Layout = "~/Views/Shared/LookUpLayout.cshtml";
    }
    @section Head{
        <script type="text/javascript">
            function BoothOfficerList() {
                ShowPostBackLoader();
                $("#DivAuthorBoothOfficerList").html("");
                $.get("@Url.Content("~/Congress/Booth/GetBoothOfficerListDetailList")", { userId: '@ViewBag.userId', boothId: '@ViewBag.boothId', date: new Date().getTime() }, function(data) {
                   
                    $("#DivAuthorBoothOfficerList").html(data).slideDown("slow");;
                    HidePostBackLoader();
                });
            }
            function PrintBoothOfficerCards() {
                ShowPostBackLoader();
                $.get("@Url.Content("~/Congress/ReportPanel/PrintBoothOfficerCards")", { userId: '@ViewBag.userId', boothId: '@ViewBag.boothId', date: new Date().getTime() }, function (data) {
                    if (data != "false") {
                         window.open('@Url.Content("~/ReportBuilder/ReportView")');
                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });
            }
           
            $(document).ready(function () {
               BoothOfficerList();
            });
        </script>
    }

    @section PageAction
{
       
        <div class="button-div m-btn waves-blue i-print" id="BtnReport">
            @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Print).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintBoothOfficerCards()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return" id="BtnUpdate">
            @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }


        </div>
    }
    @section PageActionDown
{
      
        <div class="button-div m-btn waves-blue i-print" id="BtnReport1">
            @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Print).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintBoothOfficerCards()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return" id="BtnUpdate1">
            @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }


        </div>
    }
    <div class="radynForm">
        
        <div id="DivAuthorBoothOfficerList"></div>
    </div>
