@using Radyn.Congress.DataStructure
@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools
@model IEnumerable<Radyn.Congress.DataStructure.RefereeCartable>
    @{
        ViewBag.Title = Resources.Congress.Referee;
        Layout = "~/Views/Shared/LookUpLayout.cshtml";
    }
    @section Head
    {
        <script type="text/javascript">

            

            $(function () {
                var value = 0;
                var count = 0;
                $("[id^=SumValue-]").each(function () {
                    var object = $(this).val();
                    if (object == undefined || object == "")
                        object = "0";
                    value += parseFloat(object);
                    count++;
                });
                var value1 = value / count;

                $("#DivAveraheSumValue").html(value1.toFixed(2));
            });
        </script>
    }
    @section PageAction
    {
        <div id="DiveOpration">

            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
            </div>
        </div>
    }
    @section PageActionDown
    {
        <div id="DiveOpration5">
            <div class="button-div m-btn waves-red i-return">
                @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
            </div>
        </div>
    }
    @foreach (var item in Model)
    {
        if (Model != null)
        {
            <div class="table-row-roller">
                <div class="item">
                    @item.Referee.FullName
                </div>
            </div>
            Html.FormGenerator(AppExtention.CongressMoudelName + "-/Congress/RefereePanel/Refereeopinion", new Referee().GetType().Name + "opinion", item.RefereeId + "," + item.ArticleId, FormState.DetailsMode);
        }
        <div>
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Congress.ScoreSum
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    <input type="text" disabled="disabled" readonly="readonly" id="SumValue-@item.RefereeId" value="@item.Score" />
                </div>
            </div>
        </div>
       

    }
    
    <hr />
    <div>
        <div class="table-row-cap">
            <div class="item">
                میانگین
            </div>
        </div>
        <div class="table-row-item drp">
            <div class="item" id="DivAveraheSumValue" >
            </div>
        </div>
    </div>
