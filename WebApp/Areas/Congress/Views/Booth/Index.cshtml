@using Radyn.Common.Definition
@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Congress.DataStructure.Booth>
    @{
        ViewBag.Title = Resources.Congress.BoothList;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{
        <script type="text/javascript">
            function PrintList() {
                ShowPostBackLoader();
                $.get("@Url.Content("~/Congress/ReportPanel/PrintBoothList")", { date: new Date().getTime() }, function (data) {
                    if (data != "false") {
                         window.open('@Url.Content("~/ReportBuilder/ReportView")');

                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });

            }
            function PrintBoothOfficerList() {
                ShowPostBackLoader();
                $.get("@Url.Content("~/Congress/ReportPanel/PrintBoothOfficerList")", { date: new Date().getTime() }, function (data) {
                    if (data != "false") {
                         window.open('@Url.Content("~/ReportBuilder/ReportView")');

                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });

            }
            function DesginBoothOfficerCardCard() {
                ShowPostBackLoader();
                $.get("@Url.Content("~/Congress/ReportPanel/DesginBoothOfficerCard")", { date: new Date().getTime() }, function (data) {
                    if (data.Result != false) {
                        window.open("@Url.Content("~/ReportBuilder/ReportDesign?DataMethod=PreaperReport")&DataMethodParamets=" + data.ReportId + "&UpdateMethod=UpdateReport&UpdateParametrs=" + data.ReportId);
                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });
            }
            function DesginUserBoothReport() {
                ShowPostBackLoader();
                $.get("@Url.Content("~/Congress/ReportPanel/DesginUserBoothReport")", { date: new Date().getTime() }, function (data) {
                    if (data.Result != false) {
                        window.open("@Url.Content("~/ReportBuilder/ReportDesign?DataMethod=PreaperReport")&DataMethodParamets=" + data.ReportId + "&UpdateMethod=UpdateReport&UpdateParametrs=" + data.ReportId);
                    }
                    ShowRadynMessage();
                }).complete(function () {
                    HidePostBackLoader();
                });

            }

        </script>
    }

    @section PageTitle
{
        @Resources.Common.List @Resources.Congress.Booth

    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Booth/Create")).Text(Resources.Congress.BoothNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }

        </div>

        <div class="button-div m-btn waves-blue i-print" id="DivPrint">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Common.List + " " + Resources.Congress.Booth).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-blue i-print" id="DivPrint2">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Common.List + " " + Resources.Congress.BoothOfficer).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintBoothOfficerList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-purple i-brush" id="DivDesginReport">
            @{Html.Radyn().ImageActionLink().Text(Resources.Congress.DesignBoothReport).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/certificate-design.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "DesginUserBoothReport()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-purple i-card-address">
            @{Html.Radyn().ImageActionLink().Text(Resources.Congress.Design + " " + Resources.Congress.BoothOfficer + " " + Resources.Congress.Card).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/card-design.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "DesginBoothOfficerCardCard()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Booth/Create")).Text(Resources.Congress.BoothNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>

        <div class="button-div m-btn waves-blue i-print" id="DivPrint1">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Common.List + " " + Resources.Congress.Booth).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-blue i-print" id="DivPrint3">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Print + " " + Resources.Common.List + " " + Resources.Congress.BoothOfficer).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/printer.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "PrintBoothOfficerList()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-purple i-brush">
            @{Html.Radyn().ImageActionLink().Text(Resources.Congress.DesignBoothReport).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/certificate-design.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "DesginUserBoothReport()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-purple i-card-address" id="DivDesignCard">
            @{Html.Radyn().ImageActionLink().Text(Resources.Congress.Design + " " + Resources.Congress.BoothOfficer + " " + Resources.Congress.Card).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/card-design.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "DesginBoothOfficerCardCard()" }).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">

        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
                <li>
                    <img src="/Content/Images/reserve-list.png">
                    @Resources.Congress.RezervList
                </li>
            </ul>
        </div>
        <div class="fit">


            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                        {
                            columns.Template(booth => booth.CategoryId.HasValue ? booth.BoothCatgory.Title : "").Title(Resources.Congress.BoothCategory).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(booth => booth.Code).Title(Resources.Congress.Code).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(booth => booth.Location).Title(Resources.Congress.Location).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(booth => string.Format("{0:n0}", booth.ValidCost.ToDecimal()) + " " + booth.CurrencyType.ToEnum<Enums.CurrencyType>().GetDescriptionInLocalization()).Title(Resources.Congress.Cost).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(booth => booth.ReservCapacity).Title(Resources.Congress.ReservCapacity).Width(70).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(hotel => hotel.RezervCount).Title(Resources.Congress.RerzervCount).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                            columns.Template(booth =>
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Booth/Details?Id=" + booth.Id) + "'>" +
                                " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Booth/Edit?Id=" + booth.Id) + "'> " +
                                " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a>  | " +
                                "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Booth/Delete?Id=" + booth.Id) + "'>" +
                                " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> | " +
                                " <a style='cursor: pointer;'  href='" + Url.Content("~/Congress/ManagmentPanel/UserBooth?boothId=" + booth.Id) + "'> " +
                                " <img width='18' align='absmiddle' title='" + Resources.Congress.RezervList + "' src='" + Url.Content("~/Content/Images/reserve-list.png") + "' />" + "</a> ").Width(300).Encode(false).Filterable(false);
                        })
                                          //
                                          .Sortable(sorting => sorting.Enabled(true))
                                          .Pageable(paging => paging.Enabled(true))
                                          .Filterable(filtering => filtering.Enabled(true))
                                          //                          .Footer(true)
                                          .Render();}
        </div>
    </div>
