@using Radyn.Common.Component
@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Common.Tools
@model Radyn.Congress.DataStructure.Booth
<div>

    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @{

                    @Resources.Congress.BoothCategory
                }
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.BoothCatgory, "", new { })
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @{

                    @Resources.Congress.Code
                }
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.EditorFor(model => model.Code)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Cost
            </div>
        </div>
        <div class="table-row-item text-drop">
            <div class="item">
                <div style="float: right;">
                    @Html.EditorFor(model => model.ValidCost)
                </div>
                <div style="float: right; margin-right: 4px">
                    @Html.DropDownListFor(model => model.CurrencyType, (SelectList)ViewBag.Currency)
                </div>
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.ReservCapacity
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.EditorFor(model => model.ReservCapacity)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.Location
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.EditorFor(model => model.Location)
            </div>
        </div>
    </div>
    <div class="item-row">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.MaxBoothOfficerCount
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                @Html.EditorFor(model => model.MaxBoothOfficerCount)
            </div>
        </div>
    </div>
</div>

