@using Radyn.EnterpriseNode.Tools
@using Radyn.FileManager
@using Radyn.Web.Mvc
@using Radyn.WebApp.AppCode.Security
@using Radyn.WebApp.Areas.Congress.Tools
@model Radyn.Congress.DataStructure.VIP
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta content="width=device-width" name="viewport">
    @{Html.Radyn().Theme("HomaBase").Render(); }
    @{Html.Radyn().Theme(SessionParameters.CurrentCongress.Configuration != null && !string.IsNullOrEmpty(SessionParameters.CurrentCongress.Configuration.Theme) ? SessionParameters.CurrentCongress.Configuration.Theme : "Default").Render(); }
    <link href="/App_Themes/HomaBase/CSS/@Resources.Design.HomaDirection" rel="stylesheet" />
    <title>@Model.EnterpriseNode.Title()</title>
</head>
<body style="padding: 10px;" class="vip-guest-box">
    <div class="col-lg-12">
        <div class="container-hd container-homa">
            <div class="container-header">
                <div class="container-header-item">
                    <span>@Resources.Congress.Vip:(@Model.EnterpriseNode.Title())</span>

                </div>
            </div>
            <div class="container-box" style="text-align: center">
                @*<div class="innerformcontent">
                    <div class="cancel" onclick="window.close();"></div>*@

                <div class="vip-guest-a" style="min-height: 400px;">
                    @if (Model.EnterpriseNode.PictureId.HasValue)
                    {
                        Html.RadynFile().Image().ID(Model.EnterpriseNode.PictureId.Value).Height(50).Width(50).Render();
                    }

                    <div>

                        <span class="text-shadow">
                            @Model.EnterpriseNode.Title()
                        </span>
                        <div class="guest-role">
                            <span>
                                @Resources.Congress.Role :
                            </span>
                            <span>
                                @Model.Role
                            </span>
                        </div>
                        <div class="resent-date">
                            <span>
                                @Resources.Congress.PresentDate :
                            </span>
                            <span>
                                @Model.PresentDate
                            </span>
                        </div>
                        @if (Model.ResumeFileId.HasValue)
                        {
                            <a class="download-box blue" target="_blank" href="/RadynFileHandler/@Model.ResumeFileId.Value" id="atag-">
                                @Resources.Congress.ResumeDownload
                            </a>
                        }
                        <div class="vip-guest-a-p">
                            @Model.Abstract
                            <br />
                            @Model.Remark
                        </div>
                    </div>
                </div>
                @*            </div>*@
            </div>
        </div>

    </div>


</body>
</html>
