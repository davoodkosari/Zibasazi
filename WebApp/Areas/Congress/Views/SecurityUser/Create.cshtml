@using Radyn.Congress.Resources
@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.Security.DataStructure.User
@{
    ViewBag.Title = @Resources.Common.Create + " " + @Resources.Security.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function CreateUser() {
            $.post("@Url.Content("~/Congress/SecurityUser/Create")", $('form[action^="@Url.Content("~/Congress/SecurityUser/Create")"]').serialize(), function (data) {
                if (data != "") {
                    ShowRadynMessage();
                }
            });
            ShowRadynMessage();
        }
        $(function() {
            $("#DivItem").html("");
            $.get("@Url.Content("~/Security/User/GetModify")", { date: new Date().getTime() }, function (data) {
                $("#DivItem").html(data).hide();
                $("#DivItem").slideDown();
            });
        });
       

    </script>

}
@section PageTitle
{
    @Resources.Security.UserName @Resources.Common.New
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();}ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/SecurityUser/Validate")).Serialize(Url.Content("~/Congress/SecurityUser/Create")).Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/SecurityUser/Index")).Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();}ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/SecurityUser/Validate")).Serialize(Url.Content("~/Congress/SecurityUser/Create")).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/SecurityUser/Index")).Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}

@using (Html.BeginForm())
{

    <div id="DivItem"></div>

    const int column = 3;

    var couter = -1;
    foreach (var keyValuePair in (Dictionary<Radyn.Congress.DataStructure.Homa, bool>
        )ViewBag.CongressList)
    {
        couter++;
        if (couter % column == 0)
        {
        }
        <div>
        </div>
        <div class="radynForm">
            <div class="table-row-cap width50percent">
                <div class="item">
                    <div style="display: inline-block">
                        @{Html.Radyn().CheckBox().Checked(keyValuePair.Value).Name("SelectedCongress").Value(keyValuePair.Key.Id.ToString()).Render(); }
                        @keyValuePair.Key.CongressTitle
                    </div>
                  
                </div>
            </div>

        </div>

    }



}