@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Security.DataStructure.User>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.Security.UserName;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.Security.UserName
    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("SecurityUser").Area("Congress").Text(Resources.Security.UserName + " " + Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>

    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("SecurityUser").Area("Congress").Text(Resources.Security.UserName + " " + Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
            </ul>
        </div>
        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                  {

                      columns.Template(userinfo => userinfo.EnterpriseNode.PictureId.HasValue ? "<img src='" + Radyn.FileManager.FileManagerContants.FileHandlerRoot + "" + userinfo.EnterpriseNode.PictureId + "' height='50' width='50'/>" : "").Title(@Resources.Gallery1.Thumbnail).Width(100).Encode(false);
                      columns.Template(userinfo => userinfo.Username).Title(Resources.Security.UserUsername).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(userinfo => userinfo.EnterpriseNode.DescriptionField).Title(Resources.EnterPriseNode.FirstName).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                      columns.Template(resource =>
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/SecurityUser/Details?Id=" + resource.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/SecurityUser/Edit?Id=" + resource.Id) + "'> " +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                          "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/SecurityUser/Delete?Id=" + resource.Id) + "'>" +
                          " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Width(300).Encode(false).Filterable(false);


                  })
                      //
                      .Pageable(paging => paging.Enabled(true))
                      .Filterable(filtering => filtering.Enabled(true))
                      //            .Footer(true)
                      .Render();}

        </div>
    </div>
