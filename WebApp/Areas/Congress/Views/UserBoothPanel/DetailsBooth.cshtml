@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools
@model Radyn.Congress.DataStructure.UserBooth
@{
    ViewBag.Title = Resources.Common.Detail;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function GetBooth() {

            var boothId = document.getElementById("BoothId").value;
            if (boothId != "") {
                $("#DivBooth").html("");
                $.get("@Url.Content("~/Congress/Booth/GetDetail")", { Id: boothId, date: new Date().getTime() }, function (data) {
                    if (data != "false") {
                        $("#DivBooth").html(data).hide();
                        $("#DivBooth").slideDown();

                    }
                    ShowRadynMessage();
                }).complete(function () {
                    BoothOfficerList();
                });
            }


        }
        function BoothOfficerList() {
            $("#DivAuthorBoothOfficerList").html("");
            $.get("@Url.Content("~/Congress/Booth/GetBoothOfficerListDetailList")", { userId: '@Model.UserId', boothId: '@Model.BoothId', date: new Date().getTime() }, function(data) {
                $("#DivAuthorBoothOfficerList").html(data).hide();
                $("#DivAuthorBoothOfficerList").slideDown();
            });
        }
        $(document).ready(function () {

            GetBooth();
        });
    </script>
}
@section PageTitle
{
    @Resources.Common.Detail

}
@section PageAction
{

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserBoothPanel/IndexBooth")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}


    </div>
}
@section PageActionDown
{

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserBoothPanel/IndexBooth")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@Html.ValidationSummary(true)
<div class="radynForm">
    <div>
        @Html.HiddenFor(user => user.BoothId)
    </div>

    <div id="DivBooth"></div>
    <div id="DivAuthorBoothOfficerList"></div>
</div>
@{
    Html.FormGenerator(AppExtention.CongressMoudelName + "-/Congress/Booth/Booth", Model.GetType().Name, SessionParameters.CongressUser.Id + "," + Model.BoothId, FormState.DetailsMode);
}


