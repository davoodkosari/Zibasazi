@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools

@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = @Resources.Congress.NewUser;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function CreateUser() {
            $.post("@Url.Content("~/Congress/User/Create")",
                $('form[action^="@Url.Content("~/Congress/User/Create")"]').serialize(),
                function(data) {
                    if (data.responseState !== false) {
                        Close_thisModal();
                        SearchUser();
                    }
                });
            ShowRadynMessage();
        }

        function SaveAndPrint() {
            $.post("@Url.Content("~/Congress/User/Create")",
                $('form[action^="@Url.Content("~/Congress/User/Create")"]').serialize(),
                function(data) {
                    if (data.responseState !== false) {
                        PrintCard(data.userId);
                        
                    }
                    
                });
            ShowRadynMessage();
        }
        function SaveAndPrintAndNew() {
            $.post("@Url.Content("~/Congress/User/Create")",
                $('form[action^="@Url.Content("~/Congress/User/Create")"]').serialize(),
                function(data) {
                    if (data.responseState !== false) {
                        ShowRadynMessage();
                        PrintCard(data.userId);
                        window.open('@Url.Content("~/Congress/User/Create")');
                        
                       
                    } else {
                        ShowRadynMessage();
                    }
                });
          
        }

        function PrintCard(id) {
            window.open('@Url.Content("~/Congress/ReportPanel/PrintUserCardFromAdmin?Id=")' + id);
        }

        $(function () {
            $("#DivCreaTItem").html("");
            $.get("@Url.Content("~/Congress/User/GetModify")", {  isadmin: 'gR9UQhF8bWhPrL0DOfYLqw==' }, function (data) {
                $("#DivCreaTItem").html(data).hide();
                $("#DivCreaTItem").slideDown();
            });
          
       })
    </script>
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {CreateUser();}ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/User/Create"),false).Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.SaveAndPrint).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){;if(data!='false') {SaveAndPrint();}ShowRadynMessage(); } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/User/Create"),false).Render(); }
    </div>
    <div class="button-div m-btn waves-green i-save">
