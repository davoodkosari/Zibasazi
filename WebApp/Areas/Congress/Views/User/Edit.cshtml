@using Radyn.FileManager
@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools

@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function EditUser() {
            $.post("@Url.Content("~/Congress/User/Edit")", $('form[action^="@Url.Content("~/Congress/User/Edit")"]').serialize(), function (data) {
                if (data != "false") {
                   Close_thisModal();
                   SearchUser();
                }
            });
            ShowRadynMessage();
        }

        $(function() {
            $("#DivEditItem").html("");
            $.get("@Url.Content("~/Congress/User/GetModify")",
                { Id: '@ViewBag.Id', viewChild: true, isadmin: 'gR9UQhF8bWhPrL0DOfYLqw==', date: new Date().getTime() },
                function(data) {
                    $("#DivEditItem").html(data).hide();
                    $("#DivEditItem").slideDown();
                });


        });
    </script>
}

@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} else {ShowRadynMessage();} } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/User/Edit"), false).Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }

    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} else {ShowRadynMessage();} } ").NavigateUrl(Url.Content("~/Congress/User/Validate")).Serialize(Url.Content("~/Congress/User/Edit"), false).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }

    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div id="DivEditItem"></div>
    </div>

}





