@using Radyn.Web.Mvc
@using Radyn.WebApp.Areas.EnterpriseNode.ExtentionTools
@{
    ViewBag.Title = Resources.Congress.User;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";

}
@section Head{

    <script type="text/javascript">

        function Selectandclose() {
            $.post("@Url.Content("~/Congress/User/MergeUsers")", $('form[action^="@Url.Content("~/Congress/User/LookUPSimilarUser")"]').serialize(), function (data) {
                if (data != "false") {
                    ShowRadynMessage();
                }
                ShowRadynMessage();
            });

        }

        function GetSimilarUser() {
            $("#DivResult").html("");
            $.get("@Url.Content("~/Congress/User/GetSimilarUser")", { date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#DivResult").html(data).hide();
                    $("#DivResult").slideDown();
                }
                ShowRadynMessage();
            });

        }
        $(document).ready(function () {

            GetSimilarUser();


        });
    </script>
}
@section PageAction
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>

}
@section PageActionDown
{
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>

}

@using (Html.BeginForm())
{
    
    <div id="DivResult"></div>
}
