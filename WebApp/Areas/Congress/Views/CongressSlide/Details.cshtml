@using Radyn.Utility
@using Radyn.Web.Mvc
@model Radyn.Slider.DataStructure.Slide
@{
    ViewBag.Title = Resources.Common.Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{

}
@section PageTitle
{
    @Resources.Common.Detail
}
@section PageAction
{

<div class="button-div m-btn waves-red i-return">
    @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressSlide/Index")).Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
<div class="button-div m-btn waves-red i-return">
    @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/CongressSlide/Index")).Text(Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
    <div class="radynForm">

        @{Html.RenderAction("GetDetails", "Slide", new { Id = ViewBag.Id, area = "Slider" });
        }
        <div class="item-row">
            <div class="table-row-cap ">
                <div class="item">
                    @Resources.Congress.UseFor
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DropDownList("Selected", (SelectList)ViewBag.Sliders, new { disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

}

