@using Radyn.EnterpriseNode.Tools
@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security

@model IEnumerable<Radyn.Congress.DataStructure.Referee>
    @{
        ViewBag.Title = Resources.Congress.RefereeList;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{
        <script type="text/javascript">
            function Pivots(id) {

                if (id != "") {
                    ShowModal("@Url.Content("~/Congress/Referee/LookUPRefereePivot?refreeId=")" + id);
                }

            }
            function loginas(Id) {
                if (confirm("@Resources.Congress.AreYouSureLoginRefereePanel")) {
                    window.open("/Congress/ManagmentPanel/LoginAsReferee?Id=" + Id);
                }
            }
            $(document).ready(function () {
                searchRefree();
            });

            function searchRefree() {

                var ti = $('#title').val();
                $("#DivLoad").show();
                $.get("/Congress/CongressMenu/SearchCongressMenu", { title: ti, date: new Date().getTime() }, function (data) {

                    $("#DivePVSearchMenuvv").html(data);
                    $("#DivLoad").hide();

                });
            }

            function ArticleAssign(id) {
                if (id != "") {
                    ShowModal("@Url.Content("~/Congress/Referee/LookUpArticleAssign?refreeId=")" + id);
                }

            }
        </script>
    }

    @section PageTitle
{
        @Resources.Congress.RefereeList
    }

    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Referee/Create")).Text(Resources.Congress.RefereeNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }

        </div>
        <div class="button-div m-btn waves-purple i-excel ">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Referee/ImportFromExcel")).ImageWidth("20").ImageHeight("20").Text(Resources.Congress.ImportFromExcel).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Microsoft-Office-Excel-icon.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Referee/Create")).Text(Resources.Congress.RefereeNew).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-purple i-excel ">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Referee/ImportFromExcel")).ImageWidth("20").ImageHeight("20").Text(Resources.Congress.ImportFromExcel).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Microsoft-Office-Excel-icon.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">

        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
                <li>
                    <img src="/Areas/Congress/Content/Images/pivot.png">
                    @Resources.Congress.Pivot
                </li>
                <li>
                    <img src="/Areas/Congress/Content/Images/ArticlesUp.png">
                    @string.Format(Resources.Congress.Article, SessionParameters.CurrentCongress.Configuration.ArticleTitle)
                </li>
                <li>
                    <img src="/Areas/Congress/Content/Images/Loginas.png">
                    @Resources.Security.Login
                </li>
            </ul>
        </div>
        <div class="fit">

            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                      {

                          columns.Template(referee => referee.FullName).Title(Resources.Security.UserName).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee => referee.Username).Title(Resources.Security.UserUsername).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee => referee.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(Resources.Common.Enable).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee1 => referee1.IsSpecial ? "داور" : "شورای سیاست گذاری").Title(Resources.Congress.IsSpecialReferee).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee1 => referee1.WaitForAnswerArticleCount).Title(Resources.Congress.WaitForAnswerCount).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee => referee.AllArticleCount).Title(string.Format(Resources.Congress.AllArticleCount, SessionParameters.CurrentCongress.Configuration.ArticleTitle)).Width(80).HeaderHtmlAttributes(new { style = "text-align:center" });
                          columns.Template(referee =>
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Referee/Details?Id=" + referee.Id) + "'>" +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Referee/Edit?Id=" + referee.Id) + "'> " +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                              "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Referee/Delete?Id=" + referee.Id) + "'>" +
                              " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> | " +
                              "<a style='cursor: pointer;' onclick=\"Pivots(" + "'" + referee.Id + "'" + ");\"  >" +
                              " <img width='18' align='absmiddle' title='" + Resources.Congress.Pivot + "' src='" + Url.Content("/Areas/Congress/Content/Images/pivot.png") + "' />" + "</a> | " +
                               "<a style='cursor: pointer;' onclick=\"ArticleAssign(" + "'" + referee.Id + "'" + ");\"  >" +
                              " <img width='18' align='absmiddle' title='" + string.Format(Resources.Congress.Article, SessionParameters.CurrentCongress.Configuration.ArticleTitle) + "' src='" + Url.Content("/Areas/Congress/Content/Images/ArticlesUp.png") + "' />" + "</a> | " +
                              "<img width='18' align='absmiddle' title='" + Resources.Security.Login + "' onclick=\"loginas('" + referee.Id + "')\" style=\"cursor: pointer\" src='" + Url.Content("/Areas/Congress/Content/Images/Loginas.png") + "' /> ").Encode(false).Filterable(false).Width(300);


                      })
                      //
                      .Sortable(sorting => sorting.Enabled(true))
                      .Pageable(paging => paging.Enabled(true))
                      .Filterable(filtering => filtering.Enabled(true))
                      //                      .Footer(true)
                      .Render();}
        </div>
    </div>
