@using Radyn.Web.Mvc;
@{
    ViewBag.Title = Resources.Congress.ChangePassword;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function ChangePassword(parameters) {
            $.post("@Url.Content("~/Congress/UserPanel/ChangePassword")", $('form[action^="@Url.Content("~/Congress/UserPanel/ChangePassword")"]').serialize(), function (data) {
                if (data != "") {
                    ShowRadynMessage();
                }
            });
            ShowRadynMessage();
        }
    </script>
}
@section PageTitle
{
    @Resources.Congress.ChangePassword
}
@section PageAction
{

    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {ChangePassword();} else {ShowRadynMessage();} } ").NavigateUrl(Url.Content("~/Congress/UserPanel/Validate")).Serialize(Url.Content("~/Congress/UserPanel/ChangePassword")).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}


    </div>
}
@section PageActionDown
{

    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {ChangePassword();} else {ShowRadynMessage();} } ").NavigateUrl(Url.Content("~/Congress/UserPanel/Validate")).Serialize(Url.Content("~/Congress/UserPanel/ChangePassword")).Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}

    </div>
}
@using (Html.BeginForm("ChangePassword", "UserPanel", new { Area = "Congress" }))
{
    @Html.ValidationSummary(true)
    <div class="radynForm">
        <div class="table width50percent users-page full-size">
            <div class="item-input">
                <div class="fit">
                    <div class="table-row-cap">
                        <div class="item">
                            @Resources.Congress.OldPassword
                        </div>
                    </div>
                    <div class="table-row-item table-fit">
                        <div class="item">
                            @Html.Password("OldPassword")
                        </div>
                    </div>
                </div>
            </div>
            <div class="item-input">
                <div class="fit">
                    <div class="table-row-cap">
                        <div class="item">
                            @Resources.Congress.NewPassword

                        </div>
                    </div>
                    <div class="table-row-item table-fit">
                        <div class="item">
                            @Html.Password("NewPassword")

                        </div>
                    </div>
                </div>
            </div>
            <div class="item-input">
                <div class="fit">
                    <div class="table-row-cap">
                        <div class="item">
                            @Resources.Congress.NewPasswordRepeat
                        </div>
                    </div>
                    <div class="table-row-item table-fit">
                        <div class="item">
                            @Html.Password("RepeatNewPassword")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
