@using Radyn.Web.Mvc
@using Radyn.WebApp.AppCode.Security
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools

@{
    ViewBag.Title = "UserForm";
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script>
        function LoadForm() {
            var id = $("#DrpForms").val();
            $.get('/Congress/UserPanel/GetUserFormInfo', { id: id, refId: '@SessionParameters.CongressUser.Id', date: new Date().getTime() }, function (data) {
                    $("#DivItem").html("");
                    $("#DivItem").html(data);

                });
        }
        $(document).ready(function () {
                LoadForm();
            });


    </script>
}




@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} else {ShowRadynMessage();} } ").Submit().Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{ Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).ImageWidth("15").Callback().CallbackType(ImageActionLink.CallbackType.post).CallbackReturnFunction(" function (data){if(data!='false') {EditUser();} else {ShowRadynMessage();} } ").Submit().Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="radynForm users-page full-size">
        <div class="item-input">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Congress.UserForm
                </div>
            </div>
            <div class="table-row-item">
                <div class="item">
                    @Html.DropDownList("DrpForms", (SelectList)ViewBag.FormList, new { onchange = "LoadForm()" })
                </div>
            </div>
        </div>
        <div id="DivItem" class="Form-Generator-box"></div>
    </div>

}