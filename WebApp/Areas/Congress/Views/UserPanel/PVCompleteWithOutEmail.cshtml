@using Radyn.Web.Mvc;
@model Radyn.Congress.DataStructure.User

<script type="text/javascript">
    function CompleteUser() {
        ShowPostBackLoader();
        var pathname = window.location.pathname; // Returns path only
        $.post("@Url.Content("~/Congress/UserPanel/InsertWithOutEmail")", $('form[action="' + pathname + '"]').serialize(), function (data) {
            if (data != "false") {
                window.location = '@Url.Content("~/Congress/UserPanel/Home")';
            }
            RefreshCaptcha();
            ShowRadynMessage();
        }).complete(function () {
            HidePostBackLoader();
        });

    }
    $(document).ready(function () {
        ShowPostBackLoader();
        $("#DivItem").html("");
        $.get("@Url.Content("~/Congress/User/GetModify")", { Id: '@ViewBag.Id', ShowImage: false, date: new Date().getTime() }, function (data) {
            $("#DivItem").html(data).slideDown("slow");;
            HidePostBackLoader();
        });
    });
</script>
<div>
    <div class="container-header">
        <div class="container-header-item">
            @Resources.Congress.User @Resources.Common.New
        </div>
    </div>
    <div class="container-box">
        @using (Html.BeginForm())
        {
            <div class="fit">
                @Html.ValidationSummary(true)
                <div>
                    <div id="DivItem"></div>
                    <div>
                        <div class="table-row-cap ">
                            <div class="item">
                                @Resources.Common.PleaseEnterTheText
                            </div>
                        </div>
                        <div class="table-row-item ">
                            <div class="item">
                                @{Html.Radyn().Captcha().NumberMode().Render(); }
                                <div class="fit">
                                    <input type="text" class="captcha" name="captch" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="fit">
                        <div class="width98percent">
                            <div class="width18percent page-invertalign">

                                <div class="login-data-row">
                                    <div class="login-data-row-item" id="BtnSave">
                                        <input type="button" value="@Resources.Common.Save" onclick="CompleteUser();">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                    }
    </div>
</div>
