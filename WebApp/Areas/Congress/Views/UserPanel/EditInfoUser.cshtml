@using Radyn.Web.Mvc;
@using Radyn.WebApp.AppCode.Security
@model Radyn.Congress.DataStructure.User
@{
    ViewBag.Title = SessionParameters.CongressUser.DescriptionField;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        function ModifyUser() {
            ShowPostBackLoader();
            $.post("@Url.Content("~/Congress/UserPanel/ModifyUser")", $('form[action^="@Url.Content("~/Congress/UserPanel/EditInfoUser")"]').serialize(), function (data) {
                if (data != "false") {
                    ShowRadynMessage();
                    window.location = "@Url.Content("~/Congress/UserPanel/Home")";
                }
            }).complete(function () {
                HidePostBackLoader();
            });;
            ShowRadynMessage();
        }


        $(document).ready(function () {
            ShowPostBackLoader();

            $("#DivItem").html("");
            $.get("@Url.Content("~/Congress/User/GetModify")", { Id: '@SessionParameters.CongressUser.Id',showpassword:false, date: new Date().getTime() }, function (data) {
                $("#DivItem").html(data).slideDown("slow");;
                HidePostBackLoader();
            });
        });
    </script>
}
@section PageTitle
{
    @SessionParameters.CongressUser.DescriptionField

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save" id="BtnSave">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "ModifyUser();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save" id="BtnSave1">
        @{Html.Radyn().ImageActionLink().ImageUrl(Url.Content("~/Content/Images/Save.png")).Text(Resources.Common.Save).OtherAttribute(new { onclick = "ModifyUser();" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/UserPanel/Home")).Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
    </div>
}
@using (Html.BeginForm())
{
   
   
    <div id="DivItem" class="radynForm"></div>
   
}
