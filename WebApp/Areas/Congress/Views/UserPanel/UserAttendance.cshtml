@using Radyn.Web.Mvc
@{
    ViewBag.Title = Resources.Congress.Attendance;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head
{
    <script type="text/javascript">

        function GetUsers(Id) {

            var Isdirty = $("#Isdirty").val();
            $.get("@Url.Content("~/Congress/UserPanel/UserAttendanceList")", { userId: Id, Isdirty: Isdirty, date: new Date().getTime() }, function (data) {
                if (data != "false") {
                    $("#DivResultUser").html(data).slideDown("slow");
                    $("#Number").focus();

                }
                ShowRadynMessage();
            }).complete(function () {
               $("#Number").focus();

            });
        }
        $(document).ready(function () {

            $("#Number").focus();
            var val = $("#UserId").val();
            if (val != "")
                GetUsers(val);

        });

    </script>
}
@section PageAction
{
    <div class="button-div m-btn waves-green i-excel">
        @{ Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/User/ImportFromXml")).ImageWidth("20").ImageHeight("20").Text(Resources.Congress.ImportFromXml).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Microsoft-Office-Excel-icon.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
    </div>
    <div class="button-div m-btn waves-blue i-download">
        @{Html.Radyn().ImageActionLink().Text(Resources.Congress.SampleFile).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Areas/Congress/Content/Images/go-bottom.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.open('/Congress/API/DownloadAttendanceXmlFile')" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-excel">
        @{ Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/User/ImportFromXml")).ImageWidth("20").ImageHeight("20").Text(Resources.Congress.ImportFromXml).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Microsoft-Office-Excel-icon.png")).ImagePosition(ImageActionLink.Position.Right).Render(); }
    </div>
    <div class="button-div m-btn waves-blue i-download">
        @{Html.Radyn().ImageActionLink().Text(Resources.Congress.SampleFile).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Areas/Congress/Content/Images/go-bottom.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.open('/Congress/API/DownloadAttendanceXmlFile')" }).Render(); }
    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
    </div>
}
<div class="radynForm">
    <div class="container-hd ">
        <div class="container-header">
            <div class="container-header-item">
                <img src="@Url.Content("/Areas/Congress/Content/Images/register.png")" />
            </div>
        </div>
        <div class="container-box">

            <div class="widget">
                @using (Html.BeginForm())
                {
                    @*@Html.AntiForgeryToken("radynAntiFor")*@
                    <input type="hidden" value="@ViewBag.UserId" name="UserId" id="UserId" />
                    <input type="hidden" value="@ViewBag.Isdirty" name="Isdirty" id="Isdirty" />
                    <div class="item-row full_width">
                        <div class="table-row-cap">
                            <div class="item">
                                @Resources.Congress.User
                            </div>
                        </div>
                        <div class="table-row-item ">
                            <div class="item">
                                <input type="text" name="Number" id="Number" />
                            </div>


                        </div>
                        <div class="button-div m-btn waves-green i-check">
                            <span>
                                <input type="submit" value="@Resources.Congress.Confirmedthepresence" id="btnSave" />
                            </span>
                        </div>
                        <div class="button-div m-btn waves-blue i-list">
                            <span>
                                <input type="button" value="@Resources.Congress.Userlist" onclick="GetUsers()" id="btnList" />
                            </span>
                        </div>
                    </div>

                }
            </div>

            <div id="DivResultUser">
            </div>
        </div>
    </div>




</div>
