@using Radyn.Web.Mvc;
@using Radyn.WebApp.Areas.Common.Component

@model Radyn.Congress.DataStructure.Homa
@{
    ViewBag.Title = @Resources.Congress.ChangeCongress;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Head{

}

@section PageTitle
{
    @Resources.Congress.ChangeCongress

}
@section PageAction
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Congress.SaveAndcontinue).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).NavigateUrl(Url.Content("~/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId)).Render(); }


    </div>
}
@section PageActionDown
{
    <div class="button-div m-btn waves-green i-save">
        @{Html.Radyn().ImageActionLink().Text(Resources.Congress.SaveAndcontinue).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().Render(); }

    </div>
    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).NavigateUrl(Url.Content("~/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId)).Render(); }
    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @*<input type="text" value="@ViewBag.urlReferrer" id="urlReferrer" name="urlReferrer" />*@
    <div class="radynForm">
        <div class="fit">
            <div class="table-row-cap">
                <div class="item">
                    @Resources.Congress.Congreess
                </div>
            </div>
            <div class="table-row-item table-fit">
                <div class="item">
                    @Html.DropDownList("SelectedCongressId", (SelectList)ViewBag.CongressList, new { })
                </div>
            </div>
        </div>
    </div>
}