@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Congress.DataStructure.Homa>
    @{
        ViewBag.Title = Resources.Common.List + " " + Resources.Congress.Congreess;
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    @section Head{}

    @section PageTitle
{
        @Resources.Common.List @Resources.Congress.Congreess


    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Homa/Create")).Text(Resources.Congress.Congreess + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-orange i-door-open">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Homa/SelectCongress")).Text(Resources.Congress.ChangeCongress).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/logout.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }

        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Homa/Create")).Text(Resources.Congress.Congreess + " " + @Resources.Common.New).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-orange i-door-open">
            @{Html.Radyn().ImageActionLink().NavigateUrl(Url.Content("~/Congress/Homa/SelectCongress")).Text(Resources.Congress.ChangeCongress).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/logout.png")).ImagePosition(ImageActionLink.Position.Right).ImageHeight("20").ImageWidth("20").Render(); }
        </div>
        <div class="button-div m-btn waves-red i-return">
            @{Html.Radyn().ImageActionLink().Text(Resources.Common.Return).Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).OtherAttribute(new { onclick = "window.location='/Security/User/Menu?oid=" + Radyn.Common.Constants.OperationId.CongressOperationId + "'" }).Render(); }
        </div>
    }
    <div class="radynForm">
        <div class="grid-guid">
            <div class="grid-guid-title">
                @Resources.Common.Help
            </div>
            <ul>
                <li>
                    <img src="/Content/Images/details.png">
                    @Resources.Common.Detail
                </li>
                <li>
                    <img src="/Content/Images/Delete-Close.png">
                    @Resources.Common.Delete
                </li>
                <li>
                    <img src="/Content/Images/edit.png">
                    @Resources.Common.Edit
                </li>
            </ul>
        </div>
        <div class="fit">
            @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
                            {
                                columns.Template(homa => homa.CongressTitle).Title(Resources.Congress.Title).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => string.IsNullOrEmpty(homa.InstallPath) ? "" : StringUtils.Decrypt(homa.InstallPath)).Title(Resources.Congress.InstallPath).Width(200).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.CongressType!=null?homa.CongressType.Title:"").Title("نوع رویداد").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.StartDate).Title(Resources.Congress.StartDate).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.EndDate).Title(Resources.Congress.EndDate).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.Enabled ? Resources.Common.Enable : Resources.Common.Disable).Title(@Resources.Common.Enable).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.HoldingDays).Title(@Resources.Congress.HoldingDays).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa => homa.Order).Title(@Resources.Congress.Order).Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
                                columns.Template(homa =>
                                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Homa/Details?Id=" + homa.Id) + "'>" +
                                    " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Homa/Edit?Id=" + homa.Id) + "'> " +
                                    " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                                    "<a style='cursor: pointer;'  href='" + Url.Content("~/Congress/Homa/Delete?Id=" + homa.Id) + "'>" +
                                    " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Width(300).Encode(false).Filterable(false);


                            })
                            //
                            .Sortable(sorting => sorting.Enabled(true))
                            .Pageable(paging => paging.Enabled(true))
                            .Filterable(filtering => filtering.Enabled(true))
                            //            .Footer(true)
                            .Render();}
        </div>
    </div>
