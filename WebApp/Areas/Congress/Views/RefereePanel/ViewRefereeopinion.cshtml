@using System
@using Radyn.Congress.DataStructure
@using Radyn.FormGenerator.Tools
@using Radyn.Web.Mvc
@using Radyn.WebApp.AppCode.Security
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools
@model RefereeCartable
@{
    ViewBag.Title = Resources.Congress.Refereeopinion;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";
}

@section Head
{

}
@section PageAction
{

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>
}
@section PageActionDown
{

    <div class="button-div m-btn waves-red i-return">
        @{Html.Radyn().ImageActionLink().Align(ImageActionLink.Alignment.Left).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Text(@Resources.Common.Return).OtherAttribute(new { onclick = "Close_thisModal()" }).Render(); }
    </div>

}
@using (Html.BeginForm())
{
    Html.FormGenerator(AppExtention.CongressMoudelName + "-/Congress/RefereePanel/Refereeopinion", new Referee().GetType().Name + "opinion", (Guid)Model.RefereeId + "," + (Guid)Model.ArticleId, FormState.DetailsMode);
    <div>
        <div class="table-row-cap">
            <div class="item">
                @Resources.Congress.ScoreSum
            </div>
        </div>
        <div class="table-row-item">
            <div class="item">
                <input type="text" disabled="disabled" readonly="readonly" value="@Model.Score" />
            </div>
        </div>
    </div>

}
