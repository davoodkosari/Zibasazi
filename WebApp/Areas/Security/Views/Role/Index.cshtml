@using Radyn.Utility
@using Radyn.Web.Mvc;

@model IEnumerable<Radyn.Security.DataStructure.Role>
    @{
        ViewBag.Title = @Resources.Common.List + " " + @Resources.Security.RoleName;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Head{}
    @section PageTitle
{
        @Resources.Common.List @Resources.Security.RoleName

    }
    @section PageAction
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Role").Area("Security").Text(@Resources.Security.RoleName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
    @section PageActionDown
{
        <div class="button-div m-btn waves-blue i-add">
            @{Html.Radyn().ImageActionLink().ActionName("Create").ControllerName("Role").Area("Security").Text(@Resources.Security.RoleName + " " + @Resources.Common.New).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Add.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
        </div>
    }
    <div class="radynForm">

        @{Html.Radyn().Grid(Model).Name("Grid").HtmlAttributes(new { style = "width:98%;margin: 0 auto" }).Columns(columns =>
              {
                  columns.Template(role => role.Name).Title(@Resources.Security.RoleName).Width(250).HeaderHtmlAttributes(new { style = "text-align:center" });
                  columns.Template(role => role.IsAdmin ? Resources.Common.Yes : Resources.Common.No).Title(Resources.Security.RoleIsAdmin).Width(60).HeaderHtmlAttributes(new { style = "text-align:center" });
                  columns.Template(role => "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleMenu/Index?roleId=" + role.Id + "") + "'>" + " <img width='18' align='absmiddle' title='" + Resources.Security.MenuName + "' src='" + Url.Content("~/Content/Images/menu.png") + "' />" + "</a> | " +
                            "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleActions/Index?roleId=" + role.Id + "") + "'>" + " <img width='18' align='absmiddle' title='" + Resources.Security.ActionName + "' src='" + Url.Content("~/Content/Images/auction.png") + "' />" + "</a> | " +
                            "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/RoleOperations/Index?roleId=" + role.Id + "") + "'>" + " <img width='18' align='absmiddle' title='" + Resources.Security.OperationName + "' src='" + Url.Content("~/Content/Images/operation.png") + "' />" + "</a> | " +
                            "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Details?Id=" + role.Id + "") + "'>" +
                            " <img width='18' align='absmiddle' title='" + Resources.Common.Detail + "' src='" + Url.Content("~/Content/Images/details.png") + "' />" + "</a> | " +
                            "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Edit?Id=" + role.Id + "") + "'>" + " <img width='18' align='absmiddle' title='" + Resources.Common.Edit + "' src='" + Url.Content("~/Content/Images/edit.png") + "' />" + "</a> | " +
                            "<a style='cursor: pointer;'  href='" + Url.Content("~/Security/Role/Delete?Id=" + role.Id + "") + "'>" + " <img width='18' align='absmiddle' title='" + Resources.Common.Delete + "' src='" + Url.Content("~/Content/Images/Delete-Close.png") + "' />" + "</a> ").Encode(false).Width(300);
              })

                                                              .Sortable(sorting => sorting.Enabled(true))
                                                              .Pageable(paging => paging.Enabled(true))
                                                              .Filterable(filtering => filtering.Enabled(true))
                                                              //.Footer(true)
                                                              .Render();
        }
    </div>
