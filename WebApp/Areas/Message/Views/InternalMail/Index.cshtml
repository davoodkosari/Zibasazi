@using Radyn.Message.Tools

@{
    ViewBag.Title = @Resources.Common.List + " " + @Resources.Security.UserName;
    Layout = "~/Areas/Congress/Views/Shared/CongressUserLayout.cshtml";
}
@section Head{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#DivMain").html("");
            $.get("/Message/InternalMail/GetIndex", { userId: '@ViewBag.UserId', date: new Date().getTime() }, function (data) {
                $("#DivMain").html(data).slideDown("slow");;
            });
        });
    </script>
}
<div class="radynForm">
    <div id="DivMain" class="widget">
    </div>
</div>
