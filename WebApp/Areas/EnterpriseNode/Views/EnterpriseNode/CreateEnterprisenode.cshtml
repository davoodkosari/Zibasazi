@using Radyn.Utility
@using Radyn.Web.Mvc;
@model Radyn.EnterpriseNode.DataStructure.EnterpriseNode
@{
    ViewBag.Title = @Resources.Common.Create;
    Layout = "~/Views/Shared/LookUpLayout.cshtml";
}
@section Head{

    <script type="text/javascript">
        function returnvalue(obj) {
            //alert(obj.id + obj.title);
            showModalReturn(obj.id, obj.title);
            ShowRadynMessage();
        }
    </script>
}

@using (Html.BeginForm())
{
    <table cellpadding="0" cellspacing="0" align="center" dir="@Resources.Common.Direction" style="text-align:@Resources.Common.Aligment;border: solid 1px grey;padding: 2px 2px 2px 2px;">
        <tr>
            <td class="DEheader" colspan="3">
                <input type="hidden" name="type" id="type" value="@Request.QueryString["Etype"]" />
                @Resources.EnterPriseNode.EnterpriseNode @Resources.Common.New
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.ValidationSummary(true)
                <table border="0" cellpadding="2" cellspacing="2" width="400" style="padding: 4px 4px 4px 4px;">
                    <tr>
                        <td class="EditFiled" colspan="2" id="EE">
                            @{Html.RenderAction("GenerateEnterpriseNodeModify", "EnterPriseNode", new { area = "EnterPriseNode", state = "Create", id = Guid.NewGuid(), type = Request.QueryString["Etype"] });}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td class="DEheader"></td>
            <td>
                <div class="button-div m-btn waves-green i-save">
                    @{Html.Radyn().ImageActionLink().ActionName("CreateEnterPriseNode").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Create).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.post).Serialize("/EnterPriseNode/EnterPriseNode/CreateEnterPriseNode", false).CallbackReturnFunction("function (data){ if (data!=null){ returnvalue(data); }else{ShowRadynMessage();} }").ImageWidth("15").ImageHeight("20").Render();}
                </div>
            </td>
            <td>
                <div class="button-div m-btn waves-red i-return">
                    @{Html.Radyn().ImageActionLink().Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Callback().CallbackType(ImageActionLink.CallbackType.Script).CallbackReturnFunction(" Close_thisModal(); ").Render();}
                </div>
            </td>
        </tr>
    </table>
}
