@using Radyn.Utility
@using Radyn.Web.Mvc

@model Radyn.EnterpriseNode.DataStructure.EnterpriseNode
@{
    ViewBag.Title = @Resources.Common.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
@section Head{}
<h2>
    @Resources.Common.Delete</h2>
<h3>@Resources.Common.DeleteMessage</h3>
@using (Html.BeginForm())
{
     <table border="0" cellpadding="0" cellspacing="0" dir="@Resources.Common.Direction">
        <tr>
            <td align="@Resources.Common.Aligment">
                <div>
                    <table>
                        <tr>
                            <td>
                                @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("EnterpriseNode").Area("News").Text(@Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("14").ImageHeight("14").Render();}
                            </td>
                            <td>
                                |
                            </td>
                            <td>
                                @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        <tr>
            <td align="@Resources.Common.Aligment">
                @{Html.RenderAction("GenerateEnterpriseNodeDetails","EnterPriseNode",new{area="EnterpriseNode",state="Delete",id=Model.Id,type=Model.EnterpriseNodeTypeId});}
            </td>
        </tr>
        <tr>
            <td align="@Resources.Common.Aligment">
                <table>
                    <tr>
                        <td>
                            @{Html.Radyn().ImageActionLink().ActionName("Delete").ControllerName("EnterpriseNode").Area("News").Text(@Resources.Common.Delete).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Delete-Close.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("14").ImageHeight("14").Render();}
                        </td>
                        <td>
                            |
                        </td>
                        <td>@{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
  
}
