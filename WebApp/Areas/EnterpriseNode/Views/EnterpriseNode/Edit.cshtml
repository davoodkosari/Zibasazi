@using Radyn.Utility
@using Radyn.Web.Mvc
@model Radyn.EnterpriseNode.DataStructure.EnterpriseNode
@{
    ViewBag.Title = Resources.Common.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{}
<h2>
    @Resources.Common.Edit
</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{

    <table border="0" cellpadding="0" cellspacing="0" dir="@Resources.Common.Direction">
        <tr>
            <td align="@Resources.Common.Aligment">
                <div>
                    <table>
                        <tr>
                            <td>
                                <div class="button-div m-btn waves-green i-save">
                                    @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("14").ImageHeight("14").Render();}
                                </div>
                            </td>
                            <td>
                                |
                            </td>
                            <td>
                                @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        <tr>
            <td align="@Resources.Common.Aligment">
                @{ Html.RenderAction("GenerateEnterpriseNodeModify", "EnterPriseNode", new { area = "EnterpriseNode", state = "Edit", id = Model.Id, type = Model.EnterpriseNodeTypeId }); }
            </td>
        </tr>
        <tr>
            <td align="@Resources.Common.Aligment">
                <table>
                    <tr>
                        <td>
                            <div class="button-div m-btn waves-green i-save">
                                @{Html.Radyn().ImageActionLink().ActionName("Edit").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Save).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/Save.png")).ImagePosition(ImageActionLink.Position.Right).Submit().ImageWidth("14").ImageHeight("14").Render();}
                            </div>
                        </td>
                        <td>
                            |
                        </td>
                        <td>
                            @{Html.Radyn().ImageActionLink().ActionName("Index").ControllerName("EnterPriseNode").Area("EnterPriseNode").Text(@Resources.Common.Return).Align(Resources.Common.Aligment.ToEnum<ImageActionLink.Alignment>()).ImageUrl(Url.Content("~/Content/Images/go-back.png")).ImagePosition(ImageActionLink.Position.Right).Render();}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

}