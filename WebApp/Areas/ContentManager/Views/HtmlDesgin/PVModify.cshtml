@using Radyn.WebApp.Areas.Common.Component
@model Radyn.ContentManager.DataStructure.HtmlDesgin
@Html.ValidationSummary(true)
<div>
    <div class="item-row fit">
        <div class="table-row-cap">
            <div class="item">
                @Resources.Common.Title
            </div>
        </div>
        <div class="table-row-item table-fit">
            <div class="item">
                <div class="width35percent page-align">
                    @Html.TextBoxFor(model => model.Title)
                    
                </div>
            </div>
        </div>
    </div>
    <div class="item-row fit">
        <div class="table-row-cap table-c-double">
            <div class="item">
                @Resources.ContentManager.Html
            </div>
        </div>
        <div class="table-row-item table-fit table-c-auto">
            <div class="item">
                @Html.TextAreaFor(x => x.Body, new { style = "height:500px;" })
            </div>
        </div>
    </div>

</div>
