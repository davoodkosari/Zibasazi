@using Radyn.WebApp.AppCode.Security
@model Radyn.Statistics.Tools.ModelView.StatisticsModel

@if (SessionParameters.CurrentCongress != null && (SessionParameters.CurrentCongress.Configuration.Theme=="Default"||SessionParameters.CurrentCongress.Configuration.Theme=="Homa-Advanced"))
{
<div class="container-box">
    <b>@Resources.Statistics.TodayViewerCount</b>:@Model.TodaySesstionCount
    <br />
    <b>@Resources.Statistics.YesterDayviewerCount</b>:@Model.YesterDaySesstionViewCount
    <br />
    <b>@Resources.Statistics.Last7DaysViewerCount</b>:@Model.Last7DaysSesstionViewCount
    <br />
    <b>@Resources.Statistics.CurrentMothViewerCount</b>:@Model.CurrentMonthSessionViewCount
    <br />
    <b>@Resources.Statistics.TotalView</b>:@Model.TotalSesstionCount
</div>
}

else
{
<div class="statitics_box">
    <div class="container">
        <div class="col-xs-12">

            <div class="col-xs-12 col-sm-6 col-md-2 align text-center">
                <b>@Resources.Statistics.TodayViewerCount</b>:@Model.TodaySesstionCount
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2 align text-center">
                <b>@Resources.Statistics.YesterDayviewerCount</b>:@Model.YesterDaySesstionViewCount
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2 align text-center">
                <b>@Resources.Statistics.LastWeekViewerCount</b>:@Model.LastWeekSesstionViewCount
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2 align text-center">
                <b>@Resources.Statistics.LastMothViewerCount</b>:@Model.CurrentMonthSessionViewCount
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2 align text-center">
                <b>@Resources.Statistics.TotalView</b>:@Model.TotalSesstionCount
            </div>
        </div>
    </div>
</div>
}
