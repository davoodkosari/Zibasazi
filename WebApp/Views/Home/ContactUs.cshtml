@using Radyn.FormGenerator.DataStructure
@using Radyn.WebApp.Areas.Congress.Tools
@using Radyn.WebApp.Areas.FormGenerator.Tools
@model object
@{
    ViewBag.Title = Resources.Common.ContactUs;
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
@section Head{}
<div class="col-lg-12">
    <div class="container-hd container-homa">
        <div class="container-header">
            <div class="container-header-item">
                <span>
                    @Resources.Common.ContactUs
</span>
            </div>
        </div>
        <div class="container-box users-page full-size detail-edit">
            @using (Html.BeginForm())
            {
                Html.FormGenerator(AppExtention.CongressMoudelName + "-/home/ContactUs", new FormStructure().GetType().Name);
                <div style="width: 80px; margin:auto">
                    <div class="button" style="margin-top: 10px;">
                        <input class="btn-forms" style="padding:6px 10px" type="submit" value="@Resources.CommonComponent.Send" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

